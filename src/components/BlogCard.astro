---
import TagList from './TagList.astro';
const { post } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');

// Calculate reading time (approx 200 words per minute)
const wordCount = post.body?.split(/\s+/).length || 0;
const readingTime = Math.ceil(wordCount / 200);

// Format date
const formattedDate = new Date(post.data.date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
});
---
<article class="group bg-white border border-spades-border rounded-xl overflow-hidden shadow-card hover:shadow-xl transition-all duration-300 hover:-translate-y-1 motion-safe:animate-fadeIn flex flex-col h-full">
  {post.data.featuredImage && (
    <div class="aspect-video overflow-hidden">
      <img
        src={`${base}${post.data.featuredImage.replace(/^\//, '')}`}
        alt={post.data.title}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
        loading="lazy"
      />
    </div>
  )}
  
  <div class="p-6 flex flex-col flex-1">
    <div class="mb-3">
      <TagList tags={post.data.tags.slice(0, 3)} />
    </div>
    
    <h3 class="font-display text-xl md:text-2xl italic text-spades-ink mb-3 group-hover:text-spades-ink/80 transition-colors">
      <a href={`${base}/blog/${post.slug}`} class="hover:underline underline-offset-4 decoration-spades-border">
        {post.data.title}
      </a>
    </h3>
    
    <p class="text-spades-muted text-sm leading-relaxed mb-4 flex-1 line-clamp-3">
      {post.data.excerpt}
    </p>
    
    <div class="flex items-center justify-between pt-4 border-t border-spades-border mt-auto">
      <div class="flex items-center gap-2 text-xs text-spades-muted">
        <span>{post.data.author}</span>
        <span aria-hidden="true">Â·</span>
        <time datetime={post.data.date}>{formattedDate}</time>
      </div>
      <span class="text-xs text-spades-muted">{readingTime} min read</span>
    </div>
  </div>
</article>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

