---
const { title, eyebrow, description, className = '' } = Astro.props;
---
<section class={`max-w-6xl mx-auto px-6 py-16 ${className}`}>
  {eyebrow && <p class="text-xs uppercase tracking-[0.4em] text-spades-muted mb-2">{eyebrow}</p>}
  {title && (
    <div class="flex items-center gap-3 mb-4">
      <span class="text-spades-ink/70" aria-hidden="true">♠︎</span>
      <h2 class="font-display text-3xl md:text-4xl text-spades-ink">{title}</h2>
    </div>
  )}
  {description && <p class="text-spades-muted max-w-3xl mb-10">{description}</p>}
  <div class="space-y-0">
    <slot />
  </div>
</section>
