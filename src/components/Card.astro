---
const { title, description, meta = [], bestFor, bullets = [], cta } = Astro.props;
---
<article class="bg-white border border-spades-border rounded-md p-8 shadow-card transition hover:-translate-y-1 hover:border-spades-ink/40 hover:shadow-[0_22px_50px_rgba(15,23,42,0.18)] motion-safe:animate-fadeIn flex flex-col h-full">
  <div class="text-center min-h-[15.5rem]">
    {meta.length > 0 && (
      <p class="text-xs uppercase tracking-[0.4em] text-spades-muted mb-2">{meta.join(' · ')}</p>
    )}
    <h3 class="font-display text-2xl md:text-3xl leading-tight text-spades-ink min-h-[5.75rem]">{title}</h3>
    <p class="text-spades-muted mt-4 text-sm leading-relaxed min-h-[4.5rem] clamp-3">{description}</p>
    {bestFor && <p class="text-xs uppercase tracking-[0.3em] text-spades-muted mt-6 min-h-[2.5rem]">Best for · {bestFor}</p>}
  </div>

  {bullets?.length > 0 && (
    <ul class="mt-7 space-y-3 text-sm text-spades-muted leading-relaxed text-left max-w-[24rem] mx-auto min-h-[6.25rem]">
      {bullets.slice(0, 4).map((item) => (
        <li class="flex gap-3">
          <span class="text-spades-ink/70 mt-1" aria-hidden="true">♠︎</span>
          <span>{item}</span>
        </li>
      ))}
    </ul>
  )}

  {cta && (
    <div class="mt-auto pt-8 flex justify-center">
      <a
        class="btn btn-primary px-5 py-3"
        href={cta.href}
      >
        {cta.label}
        <span aria-hidden="true">→</span>
      </a>
    </div>
  )}
</article>
