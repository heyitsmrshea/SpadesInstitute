---
import ArrowUpIcon from './icons/ArrowUpIcon.astro';
---
<button
  id="backToTop"
  class="tooltip fixed bottom-8 right-8 z-50 w-12 h-12 rounded-full bg-spades-ink text-white shadow-card hover:bg-spades-ink/90 transition-all duration-300 opacity-0 pointer-events-none focus:outline-none focus:ring-2 focus:ring-spades-ink/30 hover:scale-110"
  aria-label="Back to top"
  data-tooltip="Back to top"
>
  <ArrowUpIcon class="w-6 h-6 mx-auto" />
</button>

<script>
  const button = document.getElementById('backToTop');
  if (button) {
    const toggleButton = () => {
      if (window.scrollY > 300) {
        button.classList.remove('opacity-0', 'pointer-events-none');
        button.classList.add('opacity-100');
      } else {
        button.classList.add('opacity-0', 'pointer-events-none');
        button.classList.remove('opacity-100');
      }
    };
    
    window.addEventListener('scroll', toggleButton);
    button.addEventListener('click', () => {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
  }
</script>

