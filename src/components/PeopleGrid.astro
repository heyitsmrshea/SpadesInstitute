---
const { people = [], variant = 'card' } = Astro.props;
const isDark = variant === 'dark';
const baseRaw = import.meta.env.BASE_URL || '/';
const base = baseRaw.endsWith('/') ? baseRaw : `${baseRaw}/`;
---
<div class="space-y-6">
  {people.map((person, i) => {
    const hasFullBio = person.fullBio && person.fullBio.length > 0;
    const cardId = `person-${person.name.toLowerCase().replace(/\s+/g, '-')}`;
    
    return (
      <article
        class="card p-6 md:p-8 motion-safe:animate-fadeIn"
        style={`animation-delay: ${i * 100}ms`}
        id={cardId}
      >
        <div class="flex flex-col md:flex-row gap-6">
          <!-- Photo -->
          <div class="flex-shrink-0">
            <img
              src={`${base}${person.headshot.replace(/^\//, '')}`}
              alt={`${person.name} headshot`}
              loading="lazy"
              class="w-24 h-24 md:w-32 md:h-32 rounded-xl object-cover border border-spades-border"
            />
          </div>

          <!-- Content -->
          <div class="flex-1 min-w-0">
            <!-- Header -->
            <div class="flex flex-wrap items-start justify-between gap-4 mb-4">
              <div>
                <h3 class="text-xl font-semibold text-spades-text">{person.name}</h3>
                <p class="text-sm text-spades-accent font-medium">{person.role}</p>
                {person.tagline && (
                  <p class="text-sm text-spades-text-secondary mt-1 italic">{person.tagline}</p>
                )}
              </div>
              {person.linkedin && (
                <a
                  href={person.linkedin}
                  target="_blank"
                  rel="noreferrer"
                  class="inline-flex items-center justify-center w-10 h-10 rounded-lg border border-spades-border text-spades-text hover:border-spades-accent hover:text-spades-accent transition-colors focus-accent"
                  aria-label={`${person.name} on LinkedIn`}
                >
                  <svg viewBox="0 0 24 24" class="w-5 h-5 fill-current" aria-hidden="true">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.35V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.6 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.063 2.063 0 114.126 0 2.062 2.062 0 01-2.063 2.065zM6.114 20.452H4.56V9h3.554v11.452H6.114zM22.225 0H1.771C.792 0 0 .774 0 1.727v20.545C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.273V1.727C24 .774 23.2 0 22.222 0h.003z" />
                  </svg>
                </a>
              )}
            </div>

            <!-- Highlights -->
            {person.highlights && person.highlights.length > 0 && (
              <ul class="flex flex-wrap gap-2 mb-4">
                {person.highlights.map((highlight) => (
                  <li class="inline-flex items-center px-3 py-1 rounded-full bg-spades-paper border border-spades-border text-xs text-spades-text-secondary">
                    {highlight}
                  </li>
                ))}
              </ul>
            )}

            <!-- Short bio -->
            <p class="text-body text-spades-text-secondary mb-4">{person.bio}</p>

            <!-- Expandable full bio -->
            {hasFullBio && (
              <details class="group">
                <summary class="cursor-pointer text-sm font-medium text-spades-accent hover:text-spades-accent-hover inline-flex items-center gap-2 focus-accent rounded">
                  <span>Read full bio</span>
                  <svg class="w-4 h-4 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </summary>
                <div class="mt-4 pt-4 border-t border-spades-border space-y-4">
                  {person.fullBio.map((paragraph) => (
                    <p class="text-body text-spades-text-secondary">{paragraph}</p>
                  ))}
                </div>
              </details>
            )}
          </div>
        </div>
      </article>
    );
  })}
</div>
