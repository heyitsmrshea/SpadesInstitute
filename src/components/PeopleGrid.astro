---
const { people = [], variant = 'card' } = Astro.props;
const isDark = variant === 'dark';
const baseRaw = import.meta.env.BASE_URL || '/';
const base = baseRaw.endsWith('/') ? baseRaw : `${baseRaw}/`;
---
<div class="space-y-6">
  {people.map((person, i) => {
    const cardId = `person-${person.name.toLowerCase().replace(/\s+/g, '-')}`;
    
    return (
      <article
        class="card card-hover p-6 md:p-8 motion-safe:animate-fadeIn"
        style={`animation-delay: ${i * 100}ms`}
        id={cardId}
      >
        <div class="flex flex-col sm:flex-row gap-6 items-center sm:items-start">
          <!-- Photo -->
          <div class="flex-shrink-0 group">
            <img
              src={`${base}${person.headshot.replace(/^\//, '')}`}
              alt={`${person.name} headshot`}
              width="128"
              height="128"
              loading="lazy"
              decoding="async"
              class="w-24 h-24 md:w-32 md:h-32 rounded-xl object-cover border border-spades-border transition-all duration-300 group-hover:scale-105 group-hover:brightness-105 group-hover:border-spades-accent/50"
            />
          </div>

          <!-- Content -->
          <div class="flex-1 min-w-0 text-center sm:text-left">
            <!-- Header -->
            <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
              <div>
                <h3 class="text-xl font-semibold text-spades-text">{person.name}</h3>
                <p class="text-sm text-spades-accent font-medium">{person.role}</p>
                {person.tagline && (
                  <p class="text-sm text-spades-text-secondary mt-2 italic">{person.tagline}</p>
                )}
              </div>
              {person.linkedin && (
                <a
                  href={person.linkedin}
                  target="_blank"
                  rel="noreferrer"
                  class="group inline-flex items-center justify-center w-10 h-10 rounded-lg border border-spades-border text-spades-text hover:border-spades-accent hover:text-spades-accent transition-all focus-accent mx-auto sm:mx-0"
                  aria-label={`${person.name} on LinkedIn`}
                >
                  <svg viewBox="0 0 24 24" class="w-5 h-5 fill-current transition-transform group-hover:scale-110" aria-hidden="true">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.35V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.6 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.063 2.063 0 114.126 0 2.062 2.062 0 01-2.063 2.065zM6.114 20.452H4.56V9h3.554v11.452H6.114zM22.225 0H1.771C.792 0 0 .774 0 1.727v20.545C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.273V1.727C24 .774 23.2 0 22.222 0h.003z" />
                  </svg>
                </a>
              )}
            </div>
          </div>
        </div>
      </article>
    );
  })}
</div>
