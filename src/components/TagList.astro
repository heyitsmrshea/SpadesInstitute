---
const { tags = [], variant = 'light' } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const isDark = variant === 'dark';
---
{tags.length > 0 && (
  <div class="flex flex-wrap gap-2">
    {tags.map((tag) => (
      <span
        class:list={[
          'inline-block px-3 py-1 rounded-full text-xs uppercase tracking-[0.2em] transition-colors',
          isDark
            ? 'bg-white/10 text-white/80 hover:bg-white/20'
            : 'bg-spades-paper text-spades-muted hover:bg-spades-border'
        ]}
      >
        {tag}
      </span>
    ))}
  </div>
)}

