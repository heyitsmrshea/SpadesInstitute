---
import AuthorCard from './AuthorCard.astro';
import TagList from './TagList.astro';
import Breadcrumbs from './Breadcrumbs.astro';
const { post, content } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');

// Calculate reading time
const wordCount = post.body?.split(/\s+/).length || 0;
const readingTime = Math.ceil(wordCount / 200);

// Format date for structured data
const isoDate = new Date(post.data.date).toISOString();
---
<Breadcrumbs items={[
  { label: 'Home', href: `${base}/` },
  { label: 'Blog', href: `${base}/blog` },
  { label: post.data.title, href: `${base}/blog/${post.slug}` }
]} />

<article class="bg-white">
  <!-- Hero Section -->
  <header class="bg-spades-ink text-white py-16 md:py-24">
    <div class="max-w-4xl mx-auto px-6 text-center motion-safe:animate-fadeUp">
      <div class="mb-6">
        <TagList tags={post.data.tags} variant="dark" />
      </div>
      <h1 class="font-display text-4xl md:text-5xl lg:text-6xl italic leading-tight mb-8">
        {post.data.title}
      </h1>
      <div class="flex items-center justify-center gap-4 text-white/80">
        <span>{post.data.author}</span>
        <span aria-hidden="true">·</span>
        <time datetime={isoDate}>
          {new Date(post.data.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        <span aria-hidden="true">·</span>
        <span>{readingTime} min read</span>
      </div>
    </div>
  </header>

  {post.data.featuredImage && (
    <div class="max-w-5xl mx-auto px-6 -mt-8 md:-mt-12 motion-safe:animate-fadeIn" style="animation-delay: 200ms">
      <img
        src={`${base}${post.data.featuredImage.replace(/^\//, '')}`}
        alt={post.data.title}
        width="1200"
        height="630"
        loading="eager"
        decoding="async"
        class="w-full rounded-xl shadow-card"
      />
    </div>
  )}

  <!-- Article Content -->
  <div class="max-w-3xl mx-auto px-6 py-12 md:py-16">
    <div class="prose prose-lg prose-spades motion-safe:animate-fadeIn" style="animation-delay: 300ms">
      <slot />
    </div>

    <!-- Author Card -->
    <div class="mt-12 pt-8 border-t border-spades-border">
      <p class="text-xs uppercase tracking-[0.4em] text-spades-muted mb-4">Written by</p>
      <AuthorCard
        authorName={post.data.author}
        date={post.data.date}
        readingTime={readingTime}
      />
    </div>

    <!-- Tags -->
    {post.data.tags.length > 0 && (
      <div class="mt-8 pt-8 border-t border-spades-border">
        <p class="text-xs uppercase tracking-[0.4em] text-spades-muted mb-4">Topics</p>
        <TagList tags={post.data.tags} />
      </div>
    )}

    <!-- Share Section -->
    <div class="mt-8 pt-8 border-t border-spades-border">
      <p class="text-xs uppercase tracking-[0.4em] text-spades-muted mb-4">Share this article</p>
      <div class="flex gap-3">
        <a
          href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(`https://HeyItsMrShea.github.io${base}/blog/${post.slug}`)}`}
          target="_blank"
          rel="noreferrer"
          class="inline-flex items-center justify-center w-10 h-10 rounded-full border border-spades-border text-spades-ink hover:bg-spades-paper transition-colors"
          aria-label="Share on Twitter"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a
          href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://HeyItsMrShea.github.io${base}/blog/${post.slug}`)}`}
          target="_blank"
          rel="noreferrer"
          class="inline-flex items-center justify-center w-10 h-10 rounded-full border border-spades-border text-spades-ink hover:bg-spades-paper transition-colors"
          aria-label="Share on LinkedIn"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.35V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.6 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.063 2.063 0 114.126 0 2.062 2.062 0 01-2.063 2.065zM6.114 20.452H4.56V9h3.554v11.452H6.114zM22.225 0H1.771C.792 0 0 .774 0 1.727v20.545C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.273V1.727C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        <a
          href={`mailto:?subject=${encodeURIComponent(post.data.title)}&body=${encodeURIComponent(`Check out this article: https://HeyItsMrShea.github.io${base}/blog/${post.slug}`)}`}
          class="inline-flex items-center justify-center w-10 h-10 rounded-full border border-spades-border text-spades-ink hover:bg-spades-paper transition-colors"
          aria-label="Share via Email"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </a>
      </div>
    </div>

    <!-- Back to Blog -->
    <div class="mt-12 text-center">
      <a href={`${base}/blog`} class="btn btn-outline">
        ← Back to all articles
      </a>
    </div>
  </div>
</article>

<style is:global>
  /* Prose styles for blog content */
  .prose {
    color: #0b0d12;
    max-width: 65ch;
    font-size: 1.125rem;
    line-height: 1.75;
  }
  
  .prose h1, .prose h2, .prose h3, .prose h4 {
    font-family: ui-serif, Georgia, Cambria, 'Times New Roman', Times, serif;
    font-style: italic;
    color: #0b0d12;
    margin-top: 2em;
    margin-bottom: 0.75em;
    line-height: 1.3;
  }
  
  .prose h1 { font-size: 2.25rem; }
  .prose h2 { font-size: 1.75rem; }
  .prose h3 { font-size: 1.5rem; }
  .prose h4 { font-size: 1.25rem; }
  
  .prose p {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
  }
  
  .prose a {
    color: #0b0d12;
    text-decoration: underline;
    text-underline-offset: 4px;
    text-decoration-color: #e6e8ee;
    transition: text-decoration-color 0.2s;
  }
  
  .prose a:hover {
    text-decoration-color: #0b0d12;
  }
  
  .prose strong {
    font-weight: 600;
  }
  
  .prose ul, .prose ol {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
    padding-left: 1.5em;
  }
  
  .prose li {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }
  
  .prose ul > li {
    list-style-type: disc;
  }
  
  .prose ol > li {
    list-style-type: decimal;
  }
  
  .prose blockquote {
    font-style: italic;
    border-left: 4px solid #e6e8ee;
    padding-left: 1.5em;
    margin: 1.5em 0;
    color: #5b6472;
  }
  
  .prose code {
    background-color: #f3f4f6;
    padding: 0.25em 0.5em;
    border-radius: 0.25em;
    font-size: 0.875em;
  }
  
  .prose pre {
    background-color: #0b0d12;
    color: #fbfbf7;
    padding: 1.5em;
    border-radius: 0.5em;
    overflow-x: auto;
    margin: 1.5em 0;
  }
  
  .prose pre code {
    background: none;
    padding: 0;
    border-radius: 0;
    font-size: 0.875em;
  }
  
  .prose hr {
    border: none;
    border-top: 1px solid #e6e8ee;
    margin: 2em 0;
  }
  
  .prose img {
    border-radius: 0.5em;
    margin: 2em auto;
    max-width: 100%;
  }
</style>

