---
import Nav from './Nav.astro';
import Footer from './Footer.astro';
import BackToTop from './BackToTop.astro';
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

const { 
  title = 'Spades Institute', 
  description = 'Connecting government, industry, and academia to solve national security priorities through trusted, nonpartisan collaboration.',
  image = '/logo-white.png',
  type = 'website'
} = Astro.props;

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://www.spadesinstitute.org';
const fullImageUrl = image.startsWith('http') ? image : `${siteUrl}${base}${image}`;
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0a0f1c" />
    <title>{title}</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    
    <!-- Givebutter Donate Widget -->
    <script async src="https://widgets.givebutter.com/latest.umd.cjs?acct=9sAUFnebueNrekhW&p=other"></script>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={`${siteUrl}${base}${Astro.url.pathname}`} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:site_name" content="Spades Institute" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={`${siteUrl}${base}${Astro.url.pathname}`} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullImageUrl} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={`${siteUrl}${base}${Astro.url.pathname}`} />
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Spades Institute",
      "url": `${siteUrl}${base}`,
      "logo": `${siteUrl}${base}/flag-us.png`,
      "description": "Connecting government, industry, and academia to solve national security priorities through trusted, nonpartisan collaboration.",
      "email": "info@spadesinstitute.org",
      "foundingDate": "2024",
      "nonprofitStatus": "501(c)(3)",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Washington",
        "addressRegion": "DC",
        "addressCountry": "US"
      },
      "sameAs": [
        "https://www.linkedin.com/company/spades-institute"
      ]
    })} />
    
    <!-- WebSite Schema with Search Action -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Spades Institute",
      "url": `${siteUrl}${base}`,
      "potentialAction": {
        "@type": "SearchAction",
        "target": {
          "@type": "EntryPoint",
          "urlTemplate": `${siteUrl}${base}/blog?search={search_term_string}`
        },
        "query-input": "required name=search_term_string"
      }
    })} />
    
    <!-- Additional page-specific head content -->
    <slot name="head" />
    
    <!-- View Transitions for smooth page changes -->
    <ViewTransitions />
  </head>
  <body class="bg-spades-paper text-spades-text antialiased">
    <div class="min-h-screen flex flex-col">
      <!-- Skip link for accessibility -->
      <a
        href="#main"
        class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-3 focus:rounded-lg focus:bg-white focus:text-spades-ink focus:shadow-card focus:ring-2 focus:ring-spades-accent"
      >
        Skip to main content
      </a>
      
      <Nav />
      
      <main id="main" class="flex-1 w-full" tabindex="-1">
        <slot />
      </main>
      
      <Footer />
      <BackToTop />
    </div>
    
    <!-- Scroll Observer for Reveal Animations -->
    <script is:inline>
      // Intersection Observer for scroll-triggered animations
      function initScrollReveal() {
        const revealElements = document.querySelectorAll('.reveal-up, .reveal-left, .reveal-right, .reveal-scale, .blur-reveal, .section-divider, .line-connector');
        
        if (revealElements.length === 0) return;
        
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('revealed');
            }
          });
        }, { 
          threshold: 0.1, 
          rootMargin: '0px 0px -50px 0px' 
        });
        
        revealElements.forEach(el => observer.observe(el));
      }
      
      // Header scroll effect
      function initHeaderScroll() {
        const header = document.querySelector('header');
        if (!header) return;
        
        function handleScroll() {
          const currentScroll = window.scrollY;
          
          if (currentScroll > 50) {
            header.classList.add('nav-scrolled');
          } else {
            header.classList.remove('nav-scrolled');
          }
        }
        
        window.addEventListener('scroll', handleScroll, { passive: true });
        handleScroll(); // Check initial state
      }
      
      // Initialize immediately
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => {
          initScrollReveal();
          initHeaderScroll();
        });
      } else {
        initScrollReveal();
        initHeaderScroll();
      }
      
      // Re-initialize after view transitions (Astro)
      document.addEventListener('astro:page-load', () => {
        initScrollReveal();
        initHeaderScroll();
      });
      
      // Fallback: reveal all elements immediately on page load, then again after delay
      // This ensures content is visible even if intersection observer fails
      function revealAllImmediately() {
        const allRevealElements = document.querySelectorAll('.reveal-up, .reveal-left, .reveal-right, .reveal-scale, .blur-reveal');
        allRevealElements.forEach(el => {
          // Check if element is in viewport or near it
          const rect = el.getBoundingClientRect();
          const isVisible = rect.top < window.innerHeight + 200;
          if (isVisible) {
            el.classList.add('revealed');
          }
        });
      }
      
      // Reveal immediately visible elements right away
      revealAllImmediately();
      
      // Fallback: reveal all remaining elements after 500ms
      setTimeout(() => {
        const unrevealed = document.querySelectorAll('.reveal-up:not(.revealed), .reveal-left:not(.revealed), .reveal-right:not(.revealed), .reveal-scale:not(.revealed), .blur-reveal:not(.revealed)');
        unrevealed.forEach(el => el.classList.add('revealed'));
      }, 500);
    </script>
  </body>
</html>
