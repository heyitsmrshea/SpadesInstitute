---
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const currentYear = new Date().getFullYear();

const footerLinks = [
  { label: 'About', href: `${base}/about` },
  { label: 'Programs', href: `${base}/engagements` },
  { label: 'People', href: `${base}/people` },
  { label: 'Blog', href: `${base}/blog` },
  { label: 'Partner', href: `${base}/connect` }
];
---
<footer class="bg-spades-ink-deep text-white">
  <div class="max-w-5xl mx-auto px-6 py-12">
    <div class="grid md:grid-cols-4 gap-8 mb-10">
      <!-- Brand -->
      <div class="md:col-span-2">
        <a href={`${base}/`} class="nav-link inline-flex items-center gap-2 text-white hover:text-white/90 mb-4">
          <span aria-hidden="true" class="text-2xl">♠︎</span>
          <span class="font-semibold text-lg">Spades Institute</span>
        </a>
        <p class="text-sm text-dark-secondary max-w-xs">
          Connecting government, industry, and academia to solve national security priorities through trusted, nonpartisan collaboration.
        </p>
        <div class="mt-4 space-y-1 text-sm text-dark-muted">
          <p>501(c)(3) nonprofit · EIN 99-2763425</p>
          <p>Washington, D.C.</p>
        </div>
      </div>

      <!-- Links -->
      <div>
        <p class="text-sm font-medium text-white mb-4">Quick Links</p>
        <nav class="space-y-2" aria-label="Footer navigation">
          {footerLinks.map((link) => (
            <a 
              href={link.href} 
              class="nav-link block text-sm text-dark-secondary hover:text-white transition-colors"
            >
              {link.label}
            </a>
          ))}
        </nav>
      </div>

      <!-- Contact -->
      <div>
        <p class="text-sm font-medium text-white mb-4">Contact</p>
        <div class="space-y-3">
          <a 
            href="mailto:info@spadesinstitute.org" 
            class="nav-link block text-sm text-dark-secondary hover:text-white transition-colors"
          >
            info@spadesinstitute.org
          </a>
          <a 
            href="https://www.linkedin.com" 
            target="_blank" 
            rel="noreferrer" 
            class="nav-link inline-flex items-center gap-2 text-sm text-dark-secondary hover:text-white transition-colors"
          >
            <svg viewBox="0 0 24 24" class="w-4 h-4 fill-current" aria-hidden="true">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.35V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.6 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.063 2.063 0 114.126 0 2.062 2.062 0 01-2.063 2.065zM6.114 20.452H4.56V9h3.554v11.452H6.114zM22.225 0H1.771C.792 0 0 .774 0 1.727v20.545C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.273V1.727C24 .774 23.2 0 22.222 0h.003z" />
            </svg>
            LinkedIn
          </a>
          <a 
            href="https://givebutter.com/spadesinstitute" 
            target="_blank" 
            rel="noreferrer" 
            class="nav-link inline-flex items-center gap-1 text-sm text-dark-secondary hover:text-white transition-colors"
          >
            Donate <span aria-hidden="true">→</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom -->
    <div class="pt-8 border-t border-white/10 flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-dark-muted">
      <p>© {currentYear} Spades Institute. All rights reserved.</p>
      <p>Democracy · Freedom · Ethics</p>
    </div>
  </div>
</footer>
