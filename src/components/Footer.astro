---
import LinkedInIcon from './icons/LinkedInIcon.astro';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const currentYear = new Date().getFullYear();

const footerLinks = [
  { label: 'About', href: `${base}/about/` },
  { label: 'Programs', href: `${base}/engagements/` },
  { label: 'People', href: `${base}/people/` },
  { label: 'Blog', href: `${base}/blog/` },
  { label: 'Partner', href: `${base}/connect/` },
  { label: 'Ethics Letter', href: `${base}/ethics-letter/` }
];
---
<footer class="bg-spades-ink-deep text-white">
  <div class="max-w-5xl mx-auto px-6 py-12">
    <div class="grid md:grid-cols-4 gap-8 mb-10">
      <!-- Brand -->
      <div class="md:col-span-2">
        <a href={`${base}/`} class="nav-link inline-block mb-4 group" aria-label="Spades Institute Home">
          <div class="flex items-center gap-2">
            <svg class="h-10 w-10 text-white" viewBox="0 0 100 120" fill="currentColor" aria-hidden="true">
              <path d="M50 0C50 0 0 45 0 70C0 87 14 100 32 100C40 100 47 96 50 90C53 96 60 100 68 100C86 100 100 87 100 70C100 45 50 0 50 0Z"/>
              <path d="M45 85L50 120L55 85C52 88 48 88 45 85Z"/>
            </svg>
            <div class="flex flex-col">
              <span class="text-lg font-bold tracking-wide text-white">SPADES</span>
              <span class="text-[10px] uppercase tracking-widest text-white/70">Institute</span>
            </div>
          </div>
        </a>
        <p class="text-sm text-dark-secondary max-w-xs">
          Connecting government, industry, and academia to solve national security priorities through trusted, nonpartisan collaboration.
        </p>
        <div class="mt-4 space-y-1 text-sm text-dark-muted">
          <p>501(c)(3) nonprofit · EIN 99-2763425</p>
          <p>Washington DC</p>
        </div>
      </div>

      <!-- Links -->
      <div>
        <p class="text-sm font-medium text-white mb-4">Quick Links</p>
        <nav class="space-y-2" aria-label="Footer navigation">
          {footerLinks.map((link) => (
            <a 
              href={link.href} 
              class="nav-link block text-sm text-dark-secondary hover:text-white hover:underline underline-offset-2 transition-all"
            >
              {link.label}
            </a>
          ))}
        </nav>
      </div>

      <!-- Contact -->
      <div>
        <p class="text-sm font-medium text-white mb-4">Contact</p>
        <div class="space-y-3">
          <a 
            href="mailto:info@spadesinstitute.org" 
            class="nav-link block text-sm text-dark-secondary hover:text-white transition-colors"
          >
            info@spadesinstitute.org
          </a>
          <a 
            href="https://www.linkedin.com/company/spades-institute" 
            target="_blank" 
            rel="noreferrer" 
            class="nav-link flex items-center gap-2 text-sm text-dark-secondary hover:text-white transition-colors"
            aria-label="Spades Institute on LinkedIn"
          >
            <LinkedInIcon class="w-4 h-4" />
            LinkedIn
          </a>
          <a 
            href="https://givebutter.com/spades-institute" 
            target="_blank" 
            rel="noreferrer" 
            class="nav-link flex items-center gap-1 text-sm text-dark-secondary hover:text-white transition-colors"
          >
            Donate <span aria-hidden="true">→</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom -->
    <div class="pt-8 border-t border-white/10 flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-dark-muted">
      <p>© {currentYear} Spades Institute. All rights reserved.</p>
      <p>Democracy · Freedom · Ethics</p>
    </div>
  </div>
</footer>
