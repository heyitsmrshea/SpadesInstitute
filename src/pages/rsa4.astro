        <form id="rsaSignupForm" class="space-y-5">
          <div>
            <label for="signup-name" class="form-label">Name <span class="text-red-400">*</span></label>
            <input id="signup-name" name="name" type="text" required placeholder="Your full name" class="input-naval" />
          </div>

          <div>
            <label for="signup-company" class="form-label">Organization <span class="text-red-400">*</span></label>
