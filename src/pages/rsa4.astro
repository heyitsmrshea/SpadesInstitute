---
import Layout from '../components/Layout.astro';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://www.spadesinstitute.org';

const events = [
  {
    id: 'dinner',
    name: 'Mission Brief: Dinner',
    tagline: 'An evening of trusted conversation',
    date: 'Monday, April 28, 2025',
    time: '6:30 PM - 9:30 PM PT',
    location: 'San Francisco, CA',
    locationDetail: 'Venue details shared upon confirmation',
    description: 'Join fellow operators, innovators, and government leaders for an intimate dinner conversation on the intersection of cybersecurity and national security.',
    calendarStart: '20250428T183000',
    calendarEnd: '20250428T213000',
  },
  {
    id: 'breakfast',
    name: 'Mission Brief: Breakfast',
    tagline: 'Start the day with purpose',
    date: 'Tuesday, April 29, 2025',
    time: '7:30 AM - 9:00 AM PT',
    location: 'San Francisco, CA',
    locationDetail: 'Venue details shared upon confirmation',
    description: 'A working breakfast bringing together senior leaders to discuss emerging threats, opportunities, and collaborative solutions.',
    calendarStart: '20250429T073000',
    calendarEnd: '20250429T090000',
  }
];

function getGoogleCalendarUrl(event: typeof events[0]) {
  const title = encodeURIComponent(`Spades Institute: ${event.name}`);
  const details = encodeURIComponent(`${event.description}\n\nHosted by Spades Institute at RSA Conference 2025`);
  const location = encodeURIComponent(`${event.location}`);
  return `https://calendar.google.com/calendar/render?action=TEMPLATE&text=${title}&dates=${event.calendarStart}/${event.calendarEnd}&details=${details}&location=${location}&ctz=America/Los_Angeles`;
}

function getICSContent(event: typeof events[0]) {
  return `BEGIN:VCALENDAR
VERSION:2.0
PRODID:-//Spades Institute//RSA Events//EN
BEGIN:VEVENT
DTSTART;TZID=America/Los_Angeles:${event.calendarStart}
DTEND;TZID=America/Los_Angeles:${event.calendarEnd}
SUMMARY:Spades Institute: ${event.name}
DESCRIPTION:${event.description}\\n\\nHosted by Spades Institute at RSA Conference 2025
LOCATION:${event.location}
END:VEVENT
END:VCALENDAR`;
}
---

<Layout
  title="RSA Conference 2025 | Spades Institute - Design 4"
  description="Join Spades Institute at RSA Conference 2025 for exclusive dinner and breakfast events."
>
  <head slot="head">
    <link rel="canonical" href={`${siteUrl}${base}/rsa4`} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Saira+Condensed:wght@400;600;700&display=swap" rel="stylesheet">
  </head>

  <style>
    /* ===== V4: AIRCRAFT CARRIER OPS - NAVAL COMMAND ===== */
    
    .font-naval {
      font-family: 'Bebas Neue', sans-serif;
      letter-spacing: 0.05em;
    }
    
    .font-deck {
      font-family: 'Saira Condensed', sans-serif;
    }

    /* Deep ocean gradient */
    .ocean-gradient {
      background: linear-gradient(180deg, 
        #0a1628 0%, 
        #0d2847 30%,
        #133a5c 50%,
        #0d2847 70%,
        #0a1628 100%);
      position: relative;
    }

    /* Wave pattern overlay */
    .wave-pattern::before {
      content: '';
      position: absolute;
      inset: 0;
      background: 
        repeating-linear-gradient(
          90deg,
          transparent,
          transparent 100px,
          rgba(255,255,255,0.01) 100px,
          rgba(255,255,255,0.01) 102px
        );
      animation: waveShift 20s linear infinite;
      pointer-events: none;
    }

    @keyframes waveShift {
      from { transform: translateX(0); }
      to { transform: translateX(100px); }
    }

    /* Carrier silhouette */
    .carrier-bg {
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 100%;
      max-width: 1000px;
      height: 150px;
      background: linear-gradient(180deg, transparent 0%, rgba(10, 22, 40, 0.8) 100%);
      opacity: 0.3;
    }

    /* Deck lights animation */
    .deck-lights {
      position: absolute;
      bottom: 60px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      gap: 80px;
    }

    .deck-light {
      width: 8px;
      height: 8px;
      background: #fbbf24;
      border-radius: 50%;
      animation: deckBlink 2s ease-in-out infinite;
    }

    .deck-light:nth-child(2) { animation-delay: 0.3s; }
    .deck-light:nth-child(3) { animation-delay: 0.6s; }
    .deck-light:nth-child(4) { animation-delay: 0.9s; }
    .deck-light:nth-child(5) { animation-delay: 1.2s; }

    @keyframes deckBlink {
      0%, 100% { opacity: 0.3; box-shadow: 0 0 5px #fbbf24; }
      50% { opacity: 1; box-shadow: 0 0 20px #fbbf24, 0 0 40px rgba(251,191,36,0.5); }
    }

    /* Compass rose decoration */
    .compass-rose {
      position: absolute;
      width: 200px;
      height: 200px;
      opacity: 0.08;
      animation: compassSpin 120s linear infinite;
    }

    @keyframes compassSpin {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }

    /* Naval stripe accent */
    .naval-stripe {
      height: 4px;
      background: linear-gradient(90deg, 
        #1e3a5f 0%, 
        #2563eb 25%, 
        #fbbf24 50%, 
        #2563eb 75%, 
        #1e3a5f 100%);
    }

    /* Hero text styling */
    .naval-title {
      color: white;
      text-shadow: 
        0 2px 4px rgba(0,0,0,0.5),
        0 4px 8px rgba(0,0,0,0.3);
    }

    /* Ship panel styling */
    .ship-panel {
      background: linear-gradient(180deg, rgba(13, 40, 71, 0.9) 0%, rgba(10, 22, 40, 0.95) 100%);
      border: 2px solid #1e3a5f;
      border-radius: 4px;
      position: relative;
      overflow: hidden;
    }

    .ship-panel::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #1e3a5f, #2563eb, #1e3a5f);
    }

    .ship-panel:hover {
      border-color: #2563eb;
      box-shadow: 0 0 40px rgba(37, 99, 235, 0.2);
      transition: all 0.3s ease;
    }

    /* Warning stripe decoration */
    .warning-stripe {
      height: 8px;
      background: repeating-linear-gradient(
        -45deg,
        #fbbf24,
        #fbbf24 10px,
        #1a1a1a 10px,
        #1a1a1a 20px
      );
    }

    /* Battle station badge */
    .station-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      background: rgba(37, 99, 235, 0.2);
      border: 2px solid #2563eb;
      font-family: 'Bebas Neue', sans-serif;
      font-size: 14px;
      letter-spacing: 0.15em;
      color: #60a5fa;
    }

    /* Anchor icon */
    .anchor-icon {
      position: relative;
    }

    .anchor-icon::before {
      content: 'âš“';
      margin-right: 0.5rem;
    }

    /* Naval buttons */
    .btn-naval {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      background: transparent;
      border: 2px solid #2563eb;
      font-family: 'Saira Condensed', sans-serif;
      font-weight: 600;
      font-size: 14px;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: #60a5fa;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .btn-naval:hover {
      background: rgba(37, 99, 235, 0.2);
      box-shadow: 0 0 20px rgba(37, 99, 235, 0.3);
    }

    .btn-naval-primary {
      background: linear-gradient(180deg, #2563eb, #1d4ed8);
      border-color: #3b82f6;
      color: white;
    }

    .btn-naval-primary:hover {
      background: linear-gradient(180deg, #3b82f6, #2563eb);
      box-shadow: 0 0 30px rgba(59, 130, 246, 0.5);
    }

    /* Input styling */
    .input-naval {
      width: 100%;
      padding: 0.875rem 1rem;
      background: rgba(10, 22, 40, 0.8);
      border: 2px solid #1e3a5f;
      font-family: 'Saira Condensed', sans-serif;
      font-size: 15px;
      color: #e2e8f0;
      transition: all 0.3s ease;
    }

    .input-naval:focus {
      outline: none;
      border-color: #2563eb;
      box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.2);
    }

    .input-naval::placeholder {
      color: rgba(148, 163, 184, 0.5);
    }

    /* Checkbox styling */
    .checkbox-naval {
      appearance: none;
      width: 22px;
      height: 22px;
      border: 2px solid #1e3a5f;
      background: rgba(10, 22, 40, 0.8);
      cursor: pointer;
      flex-shrink: 0;
      transition: all 0.2s ease;
    }

    .checkbox-naval:checked {
      background: #2563eb;
      border-color: #2563eb;
    }

    .checkbox-naval:checked::after {
      content: 'âœ“';
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 14px;
      color: white;
      height: 100%;
    }

    /* Data display */
    .ship-data {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.5rem 0;
      border-bottom: 1px solid rgba(30, 58, 95, 0.5);
    }

    .ship-data:last-child {
      border-bottom: none;
    }

    .data-icon {
      width: 20px;
      height: 20px;
      color: #60a5fa;
    }

    /* Heading bar */
    .heading-bar {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1rem;
      font-family: 'Saira Condensed', sans-serif;
      font-size: 12px;
      letter-spacing: 0.2em;
      color: rgba(96, 165, 250, 0.6);
      text-transform: uppercase;
    }

    .heading-bar span {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    /* Reveal animations */
    .reveal-up {
      opacity: 0;
      transform: translateY(30px);
      animation: revealUp 0.8s ease-out forwards;
    }

    .reveal-delay-1 { animation-delay: 0.15s; }
    .reveal-delay-2 { animation-delay: 0.3s; }
    .reveal-delay-3 { animation-delay: 0.45s; }

    @keyframes revealUp {
      to { opacity: 1; transform: translateY(0); }
    }

    /* Section divider */
    .section-divider {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1rem;
      padding: 2rem 0;
    }

    .section-divider::before,
    .section-divider::after {
      content: '';
      height: 2px;
      width: 100px;
      background: linear-gradient(90deg, transparent, #1e3a5f);
    }

    .section-divider::after {
      background: linear-gradient(-90deg, transparent, #1e3a5f);
    }

    /* Form label */
    .form-label {
      display: block;
      font-family: 'Saira Condensed', sans-serif;
      font-weight: 600;
      font-size: 13px;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: #94a3b8;
      margin-bottom: 0.5rem;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .compass-rose { display: none; }
      .deck-lights { display: none; }
    }
  </style>

