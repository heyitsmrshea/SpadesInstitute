            <input id="signup-email" name="email" type="email" required placeholder="your.email@organization.com" class="input-naval" />
          </div>

          <div>
            <label class="form-label">Select Station(s) <span class="text-red-400">*</span></label>
            <div class="space-y-3 mt-3">
