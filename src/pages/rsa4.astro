          <div class="pt-4">
            <button type="submit" id="submit-btn" class="btn-naval-primary w-full justify-center py-4 text-base">
              <span id="submit-text">Submit Boarding Request</span>
              <span id="submit-spinner" class="hidden">Transmitting...</span>
              <span id="submit-arrow">â†’</span>
            </button>
          </div>

          <p class="font-deck text-xs text-slate-500 text-center">
            All communications secured. Information used for event coordination only.
          </p>
        </form>
      </div>
    </div>
  </section>

  <!-- Warning stripe -->
  <div class="warning-stripe"></div>

  <!-- Footer -->
  <section class="ocean-gradient py-12">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <div class="flex items-center justify-center gap-4 text-blue-400/40 font-deck text-sm mb-6">
        <span>â€”</span>
        <span class="uppercase tracking-widest">All Hands Dismissed</span>
        <span>â€”</span>
      </div>

