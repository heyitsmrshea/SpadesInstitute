              <a href={getGoogleCalendarUrl(event)} target="_blank" rel="noreferrer" class="btn-naval text-sm">
                ðŸ“… Add to Calendar
              </a>
              <button class="btn-naval text-sm download-ics" data-event-id={event.id} data-ics-content={getICSContent(event)}>
                â¬‡ Download .ICS
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Divider -->
  <div class="ocean-gradient">
    <div class="section-divider">
      <span class="text-blue-400/40">âš“</span>
    </div>
  </div>

  <!-- Signup Form Section -->
  <section id="signup" class="ocean-gradient py-20 relative">
    <div class="max-w-2xl mx-auto px-6">
      <div class="ship-panel p-8 md:p-10">
        <div class="text-center mb-8">
          <p class="font-deck text-sm uppercase tracking-[0.3em] text-amber-400 mb-2">Boarding Request</p>
          <h2 class="font-naval text-3xl md:text-4xl text-white">
            REQUEST CLEARANCE
          </h2>
          <p class="font-deck text-slate-400 mt-3 text-sm">
            Submit credentials for boarding authorization. Venue coordinates released upon approval.
          </p>
        </div>

        <div id="form-success" class="hidden mb-6 p-4 bg-green-500/10 border-2 border-green-500/40">
          <p class="font-naval text-green-400 text-lg">REQUEST TRANSMITTED</p>
          <p class="font-deck text-green-400/70 text-sm mt-1">Stand by for confirmation signal.</p>
        </div>

        <div id="form-error" class="hidden mb-6 p-4 bg-red-500/10 border-2 border-red-500/40">
          <p class="font-naval text-red-400" id="error-message">TRANSMISSION FAILED</p>
