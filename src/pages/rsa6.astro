---
import Layout from '../components/Layout.astro';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://www.spadesinstitute.org';

const events = [
  { id: 'dinner', name: 'Dinner', date: 'Mon, Apr 28', time: '6:30 PM', calendarStart: '20250428T183000', calendarEnd: '20250428T213000' },
  { id: 'breakfast', name: 'Breakfast', date: 'Tue, Apr 29', time: '7:30 AM', calendarStart: '20250429T073000', calendarEnd: '20250429T090000' }
];
---

<Layout title="RSA 2025 | Spades Institute" description="Join Spades Institute at RSA Conference 2025">
  <head slot="head">
    <link rel="canonical" href={`${siteUrl}${base}/rsa6`} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>

  <style>
    /* ===== RSA6: SPLIT-SCREEN LAYOUT ===== */
    * { font-family: 'Inter', sans-serif; }
    
    .split-container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      min-height: 100vh;
    }
    
    @media (max-width: 900px) {
      .split-container { grid-template-columns: 1fr; }
    }
    
    .left-panel {
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 3rem;
      color: white;
    }
    
    .right-panel {
      background: #f8fafc;
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 3rem;
    }
    
    .event-pill {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      background: rgba(59,130,246,0.15);
      border: 1px solid rgba(59,130,246,0.3);
      border-radius: 999px;
      font-size: 13px;
      color: #93c5fd;
      margin-bottom: 0.5rem;
      margin-right: 0.5rem;
    }
    
    .title { font-size: 2.5rem; font-weight: 700; margin-bottom: 1rem; line-height: 1.2; }
    .subtitle { font-size: 1.1rem; color: #94a3b8; line-height: 1.6; margin-bottom: 2rem; }
    
    .form-title { font-size: 1.5rem; font-weight: 600; color: #0f172a; margin-bottom: 1.5rem; }
    
    .input-field {
      width: 100%;
      padding: 0.875rem 1rem;
      border: 2px solid #e2e8f0;
      border-radius: 8px;
      font-size: 15px;
      margin-bottom: 1rem;
      transition: border-color 0.2s;
    }
    .input-field:focus { outline: none; border-color: #3b82f6; }
    
    .checkbox-row {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem;
      background: #f1f5f9;
      border-radius: 8px;
      margin-bottom: 0.5rem;
      cursor: pointer;
    }
    .checkbox-row:hover { background: #e2e8f0; }
    
    .checkbox-input {
      width: 20px;
      height: 20px;
      accent-color: #3b82f6;
    }
    
    .submit-btn {
      width: 100%;
      padding: 1rem;
      background: #3b82f6;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
      margin-top: 1rem;
      transition: background 0.2s;
    }
    .submit-btn:hover { background: #2563eb; }
    
    .success-msg { background: #dcfce7; border: 1px solid #86efac; color: #166534; padding: 1rem; border-radius: 8px; margin-bottom: 1rem; display: none; }
    .error-msg { background: #fee2e2; border: 1px solid #fca5a5; color: #991b1b; padding: 1rem; border-radius: 8px; margin-bottom: 1rem; display: none; }
    
    .footer-link { color: #64748b; font-size: 13px; text-decoration: none; }
    .footer-link:hover { color: #3b82f6; }

    /* Spades Logo */
    .spades-logo {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 1.5rem;
    }

    .spades-logo-icon {
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, #3b82f6, #1d4ed8);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
      color: white;
    }

    .spades-logo-text {
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: #93c5fd;
    }

    /* Event icons */
    .event-icon {
      margin-right: 0.5rem;
    }

    /* Panel divider */
    .panel-divider {
      position: absolute;
      top: 0;
      bottom: 0;
      left: 50%;
      width: 2px;
      background: linear-gradient(180deg, transparent, #3b82f6, transparent);
    }

    /* Attendee avatars */
    .attendee-row {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-top: 1rem;
      padding-top: 1rem;
      border-top: 1px solid rgba(255,255,255,0.1);
    }

    .avatar-stack {
      display: flex;
    }

    .avatar {
      width: 28px;
      height: 28px;
      border-radius: 50%;
      background: #1e3a5f;
      border: 2px solid #0f172a;
      margin-left: -8px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 10px;
      color: #93c5fd;
    }

    .avatar:first-child { margin-left: 0; }

    .attendee-text {
      font-size: 12px;
      color: #94a3b8;
    }

    /* Why attend bullets */
    .why-attend {
      margin-top: 1.5rem;
      padding-top: 1rem;
      border-top: 1px solid rgba(255,255,255,0.1);
    }

    .why-attend-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 13px;
      color: #94a3b8;
      margin-bottom: 0.5rem;
    }

    .why-attend-item::before {
      content: '‚úì';
      color: #22c55e;
      font-size: 12px;
    }

    /* Form progress */
    .form-progress {
      height: 3px;
      background: #e2e8f0;
      border-radius: 2px;
      margin-bottom: 1rem;
      overflow: hidden;
    }

    .form-progress-bar {
      height: 100%;
      background: #3b82f6;
      width: 0%;
      transition: width 0.3s ease;
    }

    /* Mobile sticky CTA */
    @media (max-width: 900px) {
      .mobile-sticky-cta {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: white;
        padding: 1rem;
        box-shadow: 0 -4px 20px rgba(0,0,0,0.1);
        z-index: 100;
        display: block !important;
      }

      .mobile-sticky-cta .submit-btn {
        margin: 0;
      }

      .panel-divider { display: none; }
    }

    @media (min-width: 901px) {
      .mobile-sticky-cta { display: none; }
    }

    /* Event pill hover */
    .event-pill:hover {
      background: rgba(59,130,246,0.25);
      transform: translateY(-2px);
      transition: all 0.2s ease;
    }

    /* Gradient on dark panel */
    .left-panel {
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #0f172a 100%);
    }
  </style>

  <div class="split-container">
    <!-- Left: Info -->
    <div class="left-panel">
      <!-- Spades Logo -->
      <div class="spades-logo">
        <div class="spades-logo-icon">‚ô†</div>
        <span class="spades-logo-text">Spades Institute</span>
      </div>

      <p style="font-size: 12px; text-transform: uppercase; letter-spacing: 0.15em; color: #64748b; margin-bottom: 1rem;">RSA Conference 2025 ‚Ä¢ San Francisco</p>

      <h1 class="title">Mission Brief</h1>
      <p class="subtitle">Join Spades Institute for exclusive dinner and breakfast gatherings with government, industry, and academia leaders.</p>

      <div style="margin-bottom: 1.5rem;">
        {events.map(e => (
          <span class="event-pill">
            <span class="event-icon">{e.id === 'dinner' ? 'üåô' : '‚òÄÔ∏è'}</span>
            <strong>{e.name}</strong> ‚Äî {e.date}, {e.time}
          </span>
        ))}
      </div>

      <!-- Attendee Row -->
      <div class="attendee-row">
        <div class="avatar-stack">
          <div class="avatar">DoD</div>
          <div class="avatar">NSA</div>
          <div class="avatar">+75</div>
        </div>
        <span class="attendee-text">Leaders confirmed</span>
      </div>

      <!-- Why Attend -->
      <div class="why-attend">
        <div class="why-attend-item">Network with government leaders</div>
        <div class="why-attend-item">Exclusive venue access</div>
        <div class="why-attend-item">Intimate conversations</div>
      </div>

      <p style="font-size: 14px; color: #64748b; margin-top: 1.5rem;">
        Venue details shared upon confirmation.<br/>
        Questions? <a href="mailto:info@spadesinstitute.org" style="color: #93c5fd;">info@spadesinstitute.org</a>
      </p>
    </div>
    
    <!-- Right: Signup Form -->
    <div class="right-panel">
      <h2 class="form-title">Request Your Invitation</h2>
      
      <div id="form-success" class="success-msg">‚úì Request submitted! Check your inbox.</div>
      <div id="form-error" class="error-msg">Something went wrong. Please try again.</div>
      
      <form id="rsaForm">
        <input type="text" name="name" placeholder="Your name" required class="input-field" />
        <input type="text" name="company" placeholder="Organization" required class="input-field" />
        <input type="email" name="email" placeholder="Email address" required class="input-field" />
        
        <p style="font-size: 13px; color: #64748b; margin-bottom: 0.5rem;">Select event(s):</p>
        {events.map(e => (
          <label class="checkbox-row">
            <input type="checkbox" name="events" value={e.id} class="checkbox-input" />
            <span><strong>{e.name}</strong> ‚Äî {e.date}</span>
          </label>
        ))}
        
        <button type="submit" class="submit-btn">Submit Request ‚Üí</button>
      </form>
      
      <p style="margin-top: 2rem; text-align: center;">
        <a href={`${base}/`} class="footer-link">‚Üê Back to Spades Institute</a>
      </p>
    </div>
  </div>

  <script>
    const form = document.getElementById('rsaForm');
    const successEl = document.getElementById('form-success');
    const errorEl = document.getElementById('form-error');
    
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      successEl.style.display = 'none';
      errorEl.style.display = 'none';
      
      const data = new FormData(form);
      const events = data.getAll('events');
      
      if (events.length === 0) {
        errorEl.textContent = 'Please select at least one event.';
        errorEl.style.display = 'block';
        return;
      }
      
      try {
        const res = await fetch('https://api.web3forms.com/submit', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            access_key: '217a97ca-0557-4364-86f7-66e28fbd499f',
            subject: `RSA 2025 - ${data.get('name')} (${data.get('company')})`,
            email: data.get('email'),
            message: `Name: ${data.get('name')}\nOrg: ${data.get('company')}\nEmail: ${data.get('email')}\nEvents: ${events.join(', ')}`
          })
        });
        const result = await res.json();
        if (result.success) {
          successEl.style.display = 'block';
          form.reset();
        } else {
          errorEl.style.display = 'block';
        }
      } catch {
        errorEl.style.display = 'block';
      }
    });
  </script>
</Layout>
