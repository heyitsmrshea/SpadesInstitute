---
import Layout from '../components/Layout.astro';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://www.spadesinstitute.org';

const events = [
  { id: 'dinner', name: 'Dinner', date: 'Mon, Apr 28', time: '6:30 PM' },
  { id: 'breakfast', name: 'Breakfast', date: 'Tue, Apr 29', time: '7:30 AM' }
];
---

<Layout title="RSA 2025 | Spades Institute" description="Join Spades Institute at RSA Conference 2025">
  <head slot="head">
    <link rel="canonical" href={`${siteUrl}${base}/rsa7`} />
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>

  <style>
    /* ===== RSA7: ULTRA-COMPACT SINGLE VIEW ===== */
    * { font-family: 'DM Sans', sans-serif; box-sizing: border-box; }
    
    .page-wrapper {
      min-height: 100vh;
      background: #111827;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1.5rem;
    }
    
    .card {
      background: white;
      border-radius: 16px;
      max-width: 480px;
      width: 100%;
      padding: 2rem;
      box-shadow: 0 25px 50px -12px rgba(0,0,0,0.5);
    }
    
    .header {
      text-align: center;
      margin-bottom: 1.5rem;
      padding-bottom: 1.5rem;
      border-bottom: 1px solid #e5e7eb;
    }
    
    .badge {
      display: inline-block;
      background: #dbeafe;
      color: #1d4ed8;
      padding: 0.25rem 0.75rem;
      border-radius: 999px;
      font-size: 11px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 0.75rem;
    }
    
    .title { font-size: 1.75rem; font-weight: 700; color: #111827; margin: 0 0 0.5rem; }
    .subtitle { font-size: 14px; color: #6b7280; margin: 0; }
    
    .events-row {
      display: flex;
      gap: 0.75rem;
      margin-bottom: 1.5rem;
    }
    
    .event-box {
      flex: 1;
      background: #f9fafb;
      border: 1px solid #e5e7eb;
      border-radius: 10px;
      padding: 0.75rem;
      text-align: center;
    }
    
    .event-name { font-weight: 600; color: #111827; font-size: 14px; }
    .event-time { font-size: 12px; color: #6b7280; margin-top: 0.25rem; }
    
    .input-group { margin-bottom: 0.75rem; }
    
    .input-field {
      width: 100%;
      padding: 0.75rem 1rem;
      border: 1px solid #d1d5db;
      border-radius: 8px;
      font-size: 14px;
    }
    .input-field:focus { outline: none; border-color: #3b82f6; box-shadow: 0 0 0 3px rgba(59,130,246,0.1); }
    
    .checkbox-grid {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 1rem;
    }
    
    .checkbox-item {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 0.625rem;
      background: #f3f4f6;
      border-radius: 8px;
      cursor: pointer;
      font-size: 13px;
      font-weight: 500;
      transition: all 0.15s;
    }
    .checkbox-item:hover { background: #e5e7eb; }
    .checkbox-item:has(input:checked) { background: #dbeafe; color: #1d4ed8; }
    .checkbox-item input { accent-color: #3b82f6; }
    
    .submit-btn {
      width: 100%;
      padding: 0.875rem;
      background: #111827;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.2s;
    }
    .submit-btn:hover { background: #1f2937; }
    
    .success-msg { background: #d1fae5; color: #065f46; padding: 0.75rem; border-radius: 8px; text-align: center; font-size: 14px; margin-bottom: 1rem; }
    .error-msg { background: #fee2e2; color: #991b1b; padding: 0.75rem; border-radius: 8px; text-align: center; font-size: 14px; margin-bottom: 1rem; }
    .hidden { display: none; }
    
    .footer { text-align: center; margin-top: 1rem; font-size: 12px; color: #9ca3af; }
    .footer a { color: #6b7280; text-decoration: none; }
    .footer a:hover { color: #111827; }
  </style>

  <div class="page-wrapper">
    <div class="card">
      <div class="header">
        <span class="badge">RSA 2025 • San Francisco</span>
        <h1 class="title">Spades Institute</h1>
        <p class="subtitle">Exclusive gatherings for national security leaders</p>
      </div>
      
      <div class="events-row">
        {events.map(e => (
          <div class="event-box">
            <div class="event-name">{e.name}</div>
            <div class="event-time">{e.date} • {e.time}</div>
          </div>
        ))}
      </div>
      
      <div id="success-msg" class="success-msg hidden">✓ Request submitted!</div>
      <div id="error-msg" class="error-msg hidden">Please try again.</div>
      
      <form id="rsaForm">
        <div class="input-group">
          <input type="text" name="name" placeholder="Name" required class="input-field" />
        </div>
        <div class="input-group">
          <input type="text" name="company" placeholder="Organization" required class="input-field" />
        </div>
        <div class="input-group">
          <input type="email" name="email" placeholder="Email" required class="input-field" />
        </div>
        
        <div class="checkbox-grid">
          {events.map(e => (
            <label class="checkbox-item">
              <input type="checkbox" name="events" value={e.id} />
              {e.name}
            </label>
          ))}
        </div>
        
        <button type="submit" class="submit-btn">Request Invitation</button>
      </form>
      
      <div class="footer">
        <a href="mailto:info@spadesinstitute.org">info@spadesinstitute.org</a> · <a href={`${base}/`}>Home</a>
      </div>
    </div>
  </div>

  <script>
    const form = document.getElementById('rsaForm');
    const successEl = document.getElementById('success-msg');
    const errorEl = document.getElementById('error-msg');
    
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      successEl?.classList.add('hidden');
      errorEl?.classList.add('hidden');
      
      const data = new FormData(form);
      const events = data.getAll('events');
      
      if (events.length === 0) {
        if (errorEl) { errorEl.textContent = 'Select at least one event'; errorEl.classList.remove('hidden'); }
        return;
      }
      
      try {
        const res = await fetch('https://api.web3forms.com/submit', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            access_key: '217a97ca-0557-4364-86f7-66e28fbd499f',
            subject: `RSA 2025 - ${data.get('name')}`,
            email: data.get('email'),
            message: `Name: ${data.get('name')}\nOrg: ${data.get('company')}\nEmail: ${data.get('email')}\nEvents: ${events.join(', ')}`
          })
        });
        if ((await res.json()).success) {
          successEl?.classList.remove('hidden');
          form.reset();
        } else { errorEl?.classList.remove('hidden'); }
      } catch { errorEl?.classList.remove('hidden'); }
    });
  </script>
</Layout>
