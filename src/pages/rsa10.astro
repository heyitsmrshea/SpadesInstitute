---
import Layout from '../components/Layout.astro';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://www.spadesinstitute.org';
---

<Layout title="RSA 2025 | Spades Institute" description="Join Spades Institute at RSA Conference 2025">
  <head slot="head">
    <link rel="canonical" href={`${siteUrl}${base}/rsa10`} />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>

  <style is:global>
    /* Hide nav and footer on this landing page */
    header, footer, .back-to-top { display: none !important; }
    body { background: #060a12 !important; }
    main { padding: 0 !important; margin: 0 !important; }
    .min-h-screen { min-height: 100vh; }
  </style>

  <style>
    /* ===== RSA10: CINEMATIC PREMIUM INVITE ===== */
    * { font-family: 'Inter', sans-serif; box-sizing: border-box; margin: 0; padding: 0; }

    /* === 1) BACKGROUND: CONTROLLED GRADIENT BASE === */
    .page {
      min-height: 100vh;
      padding: 2rem;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
      /* Deep navy to steel-blue mesh gradient */
      background:
        linear-gradient(135deg, #050810 0%, #0a1220 25%, #0f1a2e 50%, #142540 75%, #1a2d4a 100%);
    }

    /* === RADIAL BLOOM BEHIND CARD (offset 10% right, slightly above) === */
    .bloom {
      position: absolute;
      top: 42%;
      left: 55%;
      transform: translate(-50%, -50%);
      width: 140%;
      height: 120%;
      z-index: 1;
      pointer-events: none;
      background: radial-gradient(ellipse 45% 35% at 52% 45%, rgba(35, 65, 105, 0.45) 0%, rgba(25, 50, 85, 0.2) 40%, transparent 70%);
    }

    /* === ARCHITECTURAL GRID (barely-there, large scale) === */
    .grid-layer {
      position: absolute;
      inset: 0;
      z-index: 2;
      opacity: 0.04;
      pointer-events: none;
      background-image:
        linear-gradient(rgba(120, 160, 200, 0.5) 1px, transparent 1px),
        linear-gradient(90deg, rgba(120, 160, 200, 0.5) 1px, transparent 1px);
      background-size: 120px 120px;
      filter: blur(1px);
    }

    /* === HANGAR LIGHT BEAM (upper right to center-left) === */
    .hangar-beam {
      position: absolute;
      top: -20%;
      right: -10%;
      width: 100%;
      height: 140%;
      z-index: 2;
      opacity: 0.08;
      pointer-events: none;
      background: linear-gradient(
        225deg,
        rgba(140, 180, 220, 0.6) 0%,
        rgba(100, 150, 200, 0.3) 15%,
        rgba(80, 130, 180, 0.1) 30%,
        transparent 50%
      );
      filter: blur(60px);
      transform: skewY(-15deg);
    }

    /* === F-18 WATERMARK (far right, very large, heavily blurred) === */
    .jet-watermark {
      position: absolute;
      top: -25%;
      right: -30%;
      width: 90%;
      height: 100%;
      z-index: 2;
      opacity: 0.05;
      pointer-events: none;
      background: url('/blog/fighter-jet.jpg') center center / contain no-repeat;
      filter: blur(55px) grayscale(100%) brightness(1.8);
      transform: rotate(-8deg);
    }

    /* === VIGNETTE (darkens edges) === */
    .vignette {
      position: absolute;
      inset: 0;
      background: radial-gradient(ellipse 70% 60% at 52% 45%, transparent 30%, rgba(5, 8, 15, 0.85) 100%);
      z-index: 3;
      pointer-events: none;
    }

    /* === 2) CARD WITH DEPTH === */
    .main-card {
      background: white;
      border-radius: 22px;
      overflow: hidden;
      display: grid;
      grid-template-columns: 55% 45%;
      max-width: 920px;
      width: 100%;
      /* Layered shadow for depth + ambient glow */
      box-shadow:
        0 4px 20px rgba(0, 0, 0, 0.3),
        0 15px 50px rgba(0, 0, 0, 0.35),
        0 30px 80px rgba(0, 0, 0, 0.25),
        inset 0 1px 0 rgba(255, 255, 255, 0.08);
      /* Subtle border for silhouette definition */
      border: 1px solid rgba(255, 255, 255, 0.1);
      position: relative;
      z-index: 10;
    }

    @media (max-width: 820px) {
      .main-card { grid-template-columns: 1fr; }
    }

    /* === 3) LEFT PANEL (INVITE SIDE) === */
    .invite-side {
      padding: 44px;
      display: flex;
      flex-direction: column;
      background: linear-gradient(180deg, #fafbfc 0%, #f6f8fa 100%);
      position: relative;
    }

    @media (max-width: 820px) {
      .invite-side { padding: 28px; }
    }

    /* Accent line at top */
    .invite-side::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, #1a3050, #2a5080, #1a3050);
    }

    /* Brand row */
    .brand-row {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 24px;
    }

    .brand-logo {
      width: 38px;
      height: 38px;
      background: linear-gradient(135deg, #1a3050, #0f1f30);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 18px;
      box-shadow: 0 2px 8px rgba(26, 48, 80, 0.35);
    }

    .brand-name {
      font-size: 12px;
      font-weight: 700;
      color: #1a3050;
      text-transform: uppercase;
      letter-spacing: 0.12em;
    }

    .invite-pill {
      margin-left: auto;
      font-size: 10px;
      font-weight: 600;
      color: #5a7090;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      padding: 5px 10px;
      background: #e8edf3;
      border-radius: 4px;
    }

    /* Headline */
    .headline {
      font-size: 1.85rem;
      font-weight: 700;
      color: #0f1a28;
      margin-bottom: 6px;
      line-height: 1.15;
      letter-spacing: -0.02em;
    }

    /* Location line */
    .location-line {
      font-size: 13px;
      color: #5a6a7a;
      margin-bottom: 14px;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .location-line svg {
      width: 14px;
      height: 14px;
      color: #7a8a9a;
    }

    /* Subhead - tightened width */
    .subhead {
      font-size: 15px;
      color: #4a5a6a;
      line-height: 1.6;
      margin-bottom: 26px;
      max-width: 44ch;
    }

    /* Event blocks - premium ticket style */
    .events-list {
      display: flex;
      flex-direction: column;
      gap: 16px;
      margin-bottom: 22px;
    }

    .event-block {
      display: flex;
      gap: 14px;
      padding: 18px;
      /* Subtle top highlight gradient */
      background: linear-gradient(180deg, #ffffff 0%, #fafbfc 100%);
      border: 1px solid #dce4ec;
      border-radius: 14px;
      position: relative;
      transition: border-color 0.2s, box-shadow 0.2s;
    }

    .event-block:hover {
      border-color: #c5d0dc;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.07);
    }

    .event-icon {
      width: 46px;
      height: 46px;
      background: linear-gradient(135deg, #1a3050 0%, #2a4a70 100%);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
      box-shadow: 0 3px 8px rgba(26, 48, 80, 0.3);
    }

    .event-icon svg {
      width: 22px;
      height: 22px;
      color: white;
    }

    .event-details {
      flex: 1;
      min-width: 0;
    }

    .event-header {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 4px;
    }

    .event-name {
      font-size: 16px;
      font-weight: 600;
      color: #0f1a28;
    }

    /* Muted limited tag - closer to palette */
    .limited-tag {
      font-size: 9px;
      font-weight: 600;
      color: #6a7a8a;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      padding: 3px 7px;
      background: #e8edf3;
      border-radius: 3px;
    }

    /* Date/time - clearer hierarchy, darker */
    .event-datetime {
      font-size: 13px;
      color: #3a4a5a;
      font-weight: 500;
      margin-bottom: 4px;
    }

    /* Venue - lighter but readable */
    .event-venue {
      font-size: 12px;
      color: #7a8a9a;
      margin-bottom: 8px;
      font-style: italic;
    }

    .event-description {
      font-size: 13px;
      color: #4a5a6a;
      line-height: 1.5;
    }

    /* Footer note */
    .invite-footer {
      margin-top: auto;
      padding-top: 18px;
      border-top: 1px solid #e4eaf0;
      font-size: 12px;
      color: #8a9aaa;
      line-height: 1.5;
    }

    /* === 4) RIGHT PANEL (FORM SIDE) === */
    .form-side {
      background: linear-gradient(180deg, #141c28 0%, #1a2435 100%);
      padding: 40px 36px;
      display: flex;
      flex-direction: column;
    }

    @media (max-width: 820px) {
      .form-side { padding: 28px 24px; }
    }

    /* Form header */
    .form-header {
      margin-bottom: 22px;
    }

    .form-title {
      font-size: 1.3rem;
      font-weight: 600;
      color: white;
      margin-bottom: 8px;
    }

    .form-badge {
      display: inline-block;
      font-size: 10px;
      font-weight: 500;
      color: #8a9aaa;
      text-transform: uppercase;
      letter-spacing: 0.06em;
      padding: 5px 10px;
      background: rgba(255, 255, 255, 0.06);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 4px;
    }

    /* Review note - more visible */
    .review-note {
      font-size: 13px;
      color: #9aaabc;
      margin-top: 12px;
    }

    /* Form fields - improved label readability */
    .field-group {
      margin-bottom: 16px;
    }

    .field-label {
      display: block;
      font-size: 12px;
      font-weight: 600;
      color: #a0b0c0;
      margin-bottom: 6px;
      text-transform: uppercase;
      letter-spacing: 0.04em;
    }

    .input-field {
      width: 100%;
      padding: 13px 15px;
      background: rgba(255, 255, 255, 0.06);
      border: 1.5px solid rgba(255, 255, 255, 0.15);
      border-radius: 8px;
      font-size: 14px;
      color: white;
      transition: all 0.2s ease;
    }

    .input-field::placeholder {
      color: #5a6a7a;
    }

    .input-field:focus {
      outline: none;
      border-color: rgba(120, 160, 200, 0.6);
      background: rgba(255, 255, 255, 0.1);
      box-shadow: 0 0 0 3px rgba(120, 160, 200, 0.15);
    }

    .field-hint {
      font-size: 11px;
      color: #7a8a9a;
      margin-top: 5px;
    }

    /* Event selection - improved contrast */
    .selection-group {
      margin-bottom: 20px;
    }

    .selection-label {
      font-size: 12px;
      font-weight: 600;
      color: #a0b0c0;
      margin-bottom: 6px;
      display: block;
      text-transform: uppercase;
      letter-spacing: 0.04em;
    }

    .selection-helper {
      font-size: 12px;
      color: #7a8a9a;
      margin-bottom: 12px;
    }

    .checkbox-tiles {
      display: flex;
      gap: 12px;
    }

    /* Checkbox tiles - increased contrast and click target */
    .checkbox-tile {
      flex: 1;
      padding: 16px 18px;
      background: rgba(255, 255, 255, 0.05);
      border: 2px solid rgba(255, 255, 255, 0.15);
      border-radius: 10px;
      color: #9aaabc;
      font-size: 14px;
      font-weight: 500;
      cursor: pointer;
      text-align: center;
      transition: all 0.2s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
    }

    .checkbox-tile:hover {
      border-color: rgba(255, 255, 255, 0.3);
      background: rgba(255, 255, 255, 0.08);
      color: #bccce0;
    }

    /* Strong selected state */
    .checkbox-tile.active {
      border-color: #4a90d0;
      background: rgba(74, 144, 208, 0.2);
      color: #a0d0ff;
    }

    .checkbox-tile .check-icon {
      width: 20px;
      height: 20px;
      border: 2px solid rgba(255, 255, 255, 0.25);
      border-radius: 5px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s;
      flex-shrink: 0;
    }

    .checkbox-tile.active .check-icon {
      background: #4a90d0;
      border-color: #4a90d0;
    }

    .checkbox-tile .check-icon svg {
      width: 12px;
      height: 12px;
      color: white;
      opacity: 0;
      transition: opacity 0.15s;
    }

    .checkbox-tile.active .check-icon svg {
      opacity: 1;
    }

    .capacity-note {
      font-size: 11px;
      color: #7a8a9a;
      margin-top: 10px;
    }

    /* CTA button */
    .submit-btn {
      width: 100%;
      padding: 15px;
      background: linear-gradient(135deg, #3080d0, #2060a0);
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;
      margin-top: 8px;
    }

    .submit-btn:hover {
      transform: translateY(-1px);
      box-shadow: 0 8px 28px rgba(48, 128, 208, 0.4);
    }

    .submit-btn:active {
      transform: translateY(0);
    }

    /* Trust microcopy */
    .trust-copy {
      margin-top: 16px;
      text-align: center;
    }

    .trust-copy p {
      font-size: 11px;
      color: #6a7a8a;
      line-height: 1.6;
      margin-bottom: 3px;
    }

    /* Messages */
    .msg {
      padding: 12px;
      border-radius: 8px;
      font-size: 13px;
      text-align: center;
      margin-bottom: 16px;
    }

    .success {
      background: rgba(34, 180, 100, 0.15);
      color: #50d090;
      border: 1px solid rgba(34, 180, 100, 0.25);
    }

    .error {
      background: rgba(220, 80, 80, 0.15);
      color: #f08080;
      border: 1px solid rgba(220, 80, 80, 0.25);
    }

    .hidden { display: none; }

    /* === MINIMAL FOOTER === */
    .minimal-footer {
      position: absolute;
      bottom: 1rem;
      left: 50%;
      transform: translateX(-50%);
      z-index: 20;
      font-size: 11px;
      color: rgba(255, 255, 255, 0.25);
    }

    .minimal-footer a {
      color: rgba(255, 255, 255, 0.35);
      text-decoration: none;
      transition: color 0.2s;
    }

    .minimal-footer a:hover {
      color: rgba(255, 255, 255, 0.6);
    }
  </style>

  <div class="page">
    <!-- Background layers -->
    <div class="bloom"></div>
    <div class="grid-layer"></div>
    <div class="hangar-beam"></div>
    <div class="jet-watermark"></div>
    <div class="vignette"></div>

    <div class="main-card">
      <!-- LEFT PANEL: INVITE SIDE -->
      <div class="invite-side">
        <!-- Brand row -->
        <div class="brand-row">
          <div class="brand-logo">♠</div>
          <span class="brand-name">Spades Institute</span>
          <span class="invite-pill">Invitation Only</span>
        </div>

        <!-- Headline -->
        <h1 class="headline">RSA Conference 2025</h1>

        <!-- Location -->
        <div class="location-line">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
          <span>San Francisco, CA</span>
        </div>

        <!-- Subhead -->
        <p class="subhead">Invitation-only gatherings for security leaders across government, industry, and academia during RSA week.</p>

        <!-- Event blocks -->
        <div class="events-list">
          <!-- Dinner -->
          <div class="event-block">
            <div class="event-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
              </svg>
            </div>
            <div class="event-details">
              <div class="event-header">
                <span class="event-name">Dinner</span>
                <span class="limited-tag">Limited seating</span>
              </div>
              <div class="event-datetime">Monday, April 28 · 6:30 PM PT</div>
              <div class="event-venue">Private venue near Moscone (details after approval)</div>
              <div class="event-description">Off-the-record conversation with senior security and national security leaders.</div>
            </div>
          </div>

          <!-- Breakfast -->
          <div class="event-block">
            <div class="event-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="5"></circle>
                <line x1="12" y1="1" x2="12" y2="3"></line>
                <line x1="12" y1="21" x2="12" y2="23"></line>
                <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                <line x1="1" y1="12" x2="3" y2="12"></line>
                <line x1="21" y1="12" x2="23" y2="12"></line>
                <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
              </svg>
            </div>
            <div class="event-details">
              <div class="event-header">
                <span class="event-name">Breakfast</span>
              </div>
              <div class="event-datetime">Tuesday, April 29 · 7:30 AM PT</div>
              <div class="event-venue">Walking distance from Moscone (details after approval)</div>
              <div class="event-description">Small-group briefing and networking before the show floor opens.</div>
            </div>
          </div>
        </div>

        <!-- Footer note -->
        <div class="invite-footer">
          Space is limited. Requests are reviewed within 24 hours.
        </div>
      </div>

      <!-- RIGHT PANEL: FORM SIDE -->
      <div class="form-side">
        <div class="form-header">
          <h2 class="form-title">Request an invitation</h2>
          <span class="form-badge">Approval required</span>
          <p class="review-note">Requests reviewed within 24 hours</p>
        </div>

        <div id="success-msg" class="msg success hidden">Your request has been submitted. You'll receive confirmation if approved.</div>
        <div id="error-msg" class="msg error hidden">Something went wrong. Please try again.</div>

        <form id="rsaForm">
          <div class="field-group">
            <label class="field-label" for="name">Full name</label>
            <input type="text" id="name" name="name" required class="input-field" placeholder="Jane Smith" />
          </div>

          <div class="field-group">
            <label class="field-label" for="company">Organization</label>
            <input type="text" id="company" name="company" required class="input-field" placeholder="Acme Corp" />
          </div>

          <div class="field-group">
            <label class="field-label" for="email">Work email</label>
            <input type="email" id="email" name="email" required class="input-field" placeholder="jane@acme.com" />
            <p class="field-hint">Work email recommended for faster approval</p>
          </div>

          <div class="selection-group">
            <label class="selection-label">Events</label>
            <p class="selection-helper">Select one or both events</p>
            <div class="checkbox-tiles">
              <button type="button" class="checkbox-tile" data-event="dinner">
                <span class="check-icon">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                </span>
                Dinner
              </button>
              <button type="button" class="checkbox-tile" data-event="breakfast">
                <span class="check-icon">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                </span>
                Breakfast
              </button>
            </div>
            <p class="capacity-note">Dinner seating is more limited than breakfast.</p>
          </div>

          <button type="submit" class="submit-btn">Request invitation</button>
        </form>

        <div class="trust-copy">
          <p>We'll only use this to confirm attendance. No marketing.</p>
          <p>You'll receive a confirmation email if approved.</p>
        </div>
      </div>
    </div>

    <!-- Minimal footer -->
    <div class="minimal-footer">
      <a href={`${base}/`}>spadesinstitute.org</a>
    </div>
  </div>

  <script>
    const tiles = document.querySelectorAll('.checkbox-tile');
    const selected = new Set();

    tiles.forEach(tile => {
      tile.addEventListener('click', () => {
        const id = tile.getAttribute('data-event') || '';
        if (selected.has(id)) {
          selected.delete(id);
          tile.classList.remove('active');
        } else {
          selected.add(id);
          tile.classList.add('active');
        }
      });
    });

    const form = document.getElementById('rsaForm');
    const successEl = document.getElementById('success-msg');
    const errorEl = document.getElementById('error-msg');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      successEl?.classList.add('hidden');
      errorEl?.classList.add('hidden');

      if (selected.size === 0) {
        if (errorEl) {
          errorEl.textContent = 'Please select at least one event';
          errorEl.classList.remove('hidden');
        }
        return;
      }

      const data = new FormData(form);

      try {
        const res = await fetch('https://api.web3forms.com/submit', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            access_key: '217a97ca-0557-4364-86f7-66e28fbd499f',
            subject: `RSA 2025 Invitation Request - ${data.get('name')}`,
            email: data.get('email'),
            message: `Name: ${data.get('name')}\nOrganization: ${data.get('company')}\nEmail: ${data.get('email')}\nEvents: ${Array.from(selected).join(', ')}`
          })
        });
        if ((await res.json()).success) {
          successEl?.classList.remove('hidden');
          form.reset();
          tiles.forEach(t => t.classList.remove('active'));
          selected.clear();
        } else {
          errorEl?.classList.remove('hidden');
        }
      } catch {
        errorEl?.classList.remove('hidden');
      }
    });
  </script>
</Layout>
