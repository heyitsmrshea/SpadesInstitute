---
import Layout from '../components/Layout.astro';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://www.spadesinstitute.org';
---

<Layout title="RSA 2025 | Spades Institute" description="Join Spades Institute at RSA Conference 2025">
  <head slot="head">
    <link rel="canonical" href={`${siteUrl}${base}/rsa10`} />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>

  <style is:global>
    /* Hide nav and footer on this landing page */
    header, footer, .back-to-top { display: none !important; }
    body { background: #060a12 !important; }
    main { padding: 0 !important; margin: 0 !important; }
    .min-h-screen { min-height: 100vh; }
  </style>

  <style>
    /* ===== RSA10: CINEMATIC PREMIUM INVITE ===== */
    * { font-family: 'Inter', sans-serif; box-sizing: border-box; margin: 0; padding: 0; }

    /* === PHD LEVEL ANIMATIONS === */

    /* Card entrance */
    @keyframes cardEntrance {
      0% {
        opacity: 0;
        transform: translateY(40px) scale(0.98);
        filter: blur(10px);
      }
      100% {
        opacity: 1;
        transform: translateY(0) scale(1);
        filter: blur(0);
      }
    }

    /* Staggered fade in */
    @keyframes fadeInUp {
      0% {
        opacity: 0;
        transform: translateY(20px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Shimmer effect for button */
    @keyframes shimmer {
      0% {
        background-position: -200% center;
      }
      100% {
        background-position: 200% center;
      }
    }

    /* Pulse glow */
    @keyframes pulseGlow {
      0%, 100% {
        box-shadow: 0 8px 28px rgba(48, 128, 208, 0.3);
      }
      50% {
        box-shadow: 0 8px 40px rgba(48, 128, 208, 0.5);
      }
    }

    /* Check pop */
    @keyframes checkPop {
      0% {
        transform: scale(0);
      }
      50% {
        transform: scale(1.3);
      }
      100% {
        transform: scale(1);
      }
    }

    /* Success celebration */
    @keyframes successPop {
      0% {
        transform: scale(0.8);
        opacity: 0;
      }
      50% {
        transform: scale(1.05);
      }
      100% {
        transform: scale(1);
        opacity: 1;
      }
    }

    /* Ripple effect */
    @keyframes ripple {
      0% {
        transform: scale(0);
        opacity: 0.5;
      }
      100% {
        transform: scale(4);
        opacity: 0;
      }
    }

    /* Input focus glow */
    @keyframes focusGlow {
      0%, 100% {
        box-shadow: 0 0 0 3px rgba(120, 160, 200, 0.15);
      }
      50% {
        box-shadow: 0 0 0 5px rgba(120, 160, 200, 0.1);
      }
    }

    /* Floating particles */
    @keyframes particleFloat {
      0%, 100% {
        transform: translateY(0) translateX(0);
        opacity: 0;
      }
      10% {
        opacity: 1;
      }
      90% {
        opacity: 1;
      }
      100% {
        transform: translateY(-100vh) translateX(20px);
        opacity: 0;
      }
    }

    /* Accent line draw */
    @keyframes lineDraw {
      0% {
        transform: scaleX(0);
        transform-origin: left;
      }
      100% {
        transform: scaleX(1);
        transform-origin: left;
      }
    }

    /* Text reveal */
    @keyframes textReveal {
      0% {
        clip-path: inset(0 100% 0 0);
      }
      100% {
        clip-path: inset(0 0 0 0);
      }
    }

    /* === 1) BACKGROUND: CUSTOM IMAGE === */
    .page {
      min-height: 100vh;
      padding: 2rem;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
      background: url('/rsa10-bg-desktop.png') center center / cover no-repeat;
      background-color: #0a0f18;
    }

    /* === VIGNETTE (darkens edges for card focus) === */
    .vignette {
      position: absolute;
      inset: 0;
      background: radial-gradient(ellipse 70% 60% at 52% 45%, transparent 30%, rgba(5, 8, 15, 0.6) 100%);
      z-index: 3;
      pointer-events: none;
    }

    /* === 2) CARD WITH DEPTH === */
    .main-card {
      background: white;
      border-radius: 22px;
      overflow: hidden;
      display: grid;
      grid-template-columns: 55% 45%;
      max-width: 920px;
      width: 100%;
      /* Layered shadow for depth + ambient glow */
      box-shadow:
        0 4px 20px rgba(0, 0, 0, 0.3),
        0 15px 50px rgba(0, 0, 0, 0.35),
        0 30px 80px rgba(0, 0, 0, 0.25),
        inset 0 1px 0 rgba(255, 255, 255, 0.08);
      /* Subtle border for silhouette definition */
      border: 1px solid rgba(255, 255, 255, 0.1);
      position: relative;
      z-index: 10;
      /* Card entrance animation */
      animation: cardEntrance 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    @media (max-width: 820px) {
      .main-card { grid-template-columns: 1fr; }
    }

    /* === 3) LEFT PANEL (INVITE SIDE) === */
    .invite-side {
      padding: 44px;
      display: flex;
      flex-direction: column;
      background: linear-gradient(180deg, #fafbfc 0%, #f6f8fa 100%);
      position: relative;
    }

    @media (max-width: 820px) {
      .invite-side { padding: 28px; }
    }

    /* Accent line at top - animated draw */
    .invite-side::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, #1a3050, #2a5080, #1a3050);
      animation: lineDraw 1.2s cubic-bezier(0.16, 1, 0.3, 1) 0.3s backwards;
    }

    /* Brand row */
    .brand-row {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 24px;
      animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.4s backwards;
    }

    .brand-logo {
      width: 38px;
      height: 38px;
      background: linear-gradient(135deg, #1a3050, #0f1f30);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 18px;
      box-shadow: 0 2px 8px rgba(26, 48, 80, 0.35);
    }

    .brand-name {
      font-size: 12px;
      font-weight: 700;
      color: #1a3050;
      text-transform: uppercase;
      letter-spacing: 0.12em;
    }

    .invite-pill {
      margin-left: auto;
      font-size: 10px;
      font-weight: 600;
      color: #5a7090;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      padding: 5px 10px;
      background: #e8edf3;
      border-radius: 4px;
    }

    /* Headline */
    .headline {
      font-size: 1.85rem;
      font-weight: 700;
      color: #0f1a28;
      margin-bottom: 6px;
      line-height: 1.15;
      letter-spacing: -0.02em;
      animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.5s backwards;
    }

    /* Location line */
    .location-line {
      font-size: 13px;
      color: #5a6a7a;
      margin-bottom: 14px;
      display: flex;
      align-items: center;
      gap: 6px;
      animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.55s backwards;
    }

    .location-line svg {
      width: 14px;
      height: 14px;
      color: #7a8a9a;
    }

    /* Subhead - tightened width */
    .subhead {
      font-size: 15px;
      color: #4a5a6a;
      line-height: 1.6;
      margin-bottom: 26px;
      max-width: 44ch;
      animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.6s backwards;
    }

    /* Event blocks - premium ticket style */
    .events-list {
      display: flex;
      flex-direction: column;
      gap: 16px;
      margin-bottom: 22px;
    }

    .event-block {
      display: flex;
      gap: 14px;
      padding: 18px;
      /* Subtle top highlight gradient */
      background: linear-gradient(180deg, #ffffff 0%, #fafbfc 100%);
      border: 1px solid #dce4ec;
      border-radius: 14px;
      position: relative;
      transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
      animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) backwards;
    }

    .event-block:first-child { animation-delay: 0.7s; }
    .event-block:last-child { animation-delay: 0.8s; }

    .event-block:hover {
      border-color: #c5d0dc;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
      transform: translateY(-4px);
    }

    .event-block:hover .event-icon {
      transform: scale(1.08);
      box-shadow: 0 4px 12px rgba(26, 48, 80, 0.4);
    }

    .event-icon {
      width: 46px;
      height: 46px;
      background: linear-gradient(135deg, #1a3050 0%, #2a4a70 100%);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
      box-shadow: 0 3px 8px rgba(26, 48, 80, 0.3);
      transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .event-icon svg {
      width: 22px;
      height: 22px;
      color: white;
    }

    .event-details {
      flex: 1;
      min-width: 0;
    }

    .event-header {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 4px;
    }

    .event-name {
      font-size: 16px;
      font-weight: 600;
      color: #0f1a28;
    }

    /* Muted limited tag - closer to palette */
    .limited-tag {
      font-size: 9px;
      font-weight: 600;
      color: #6a7a8a;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      padding: 3px 7px;
      background: #e8edf3;
      border-radius: 3px;
    }

    /* Date/time - clearer hierarchy, darker */
    .event-datetime {
      font-size: 13px;
      color: #3a4a5a;
      font-weight: 500;
      margin-bottom: 4px;
    }

    /* Venue - lighter but readable */
    .event-venue {
      font-size: 12px;
      color: #7a8a9a;
      margin-bottom: 8px;
      font-style: italic;
    }

    .event-description {
      font-size: 13px;
      color: #4a5a6a;
      line-height: 1.5;
    }

    /* Footer note */
    .invite-footer {
      margin-top: auto;
      padding-top: 18px;
      border-top: 1px solid #e4eaf0;
      font-size: 12px;
      color: #8a9aaa;
      line-height: 1.5;
    }

    /* === 4) RIGHT PANEL (FORM SIDE) === */
    .form-side {
      background: linear-gradient(180deg, #141c28 0%, #1a2435 100%);
      padding: 40px 36px;
      display: flex;
      flex-direction: column;
    }

    @media (max-width: 820px) {
      .form-side { padding: 28px 24px; }
    }

    /* Form header */
    .form-header {
      margin-bottom: 22px;
      animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.5s backwards;
    }

    .form-title {
      font-size: 1.3rem;
      font-weight: 600;
      color: white;
      margin-bottom: 8px;
    }

    .form-badge {
      display: inline-block;
      font-size: 10px;
      font-weight: 500;
      color: #8a9aaa;
      text-transform: uppercase;
      letter-spacing: 0.06em;
      padding: 5px 10px;
      background: rgba(255, 255, 255, 0.06);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 4px;
    }

    /* Review note - more visible */
    .review-note {
      font-size: 13px;
      color: #9aaabc;
      margin-top: 12px;
    }

    /* Form fields - improved label readability */
    .field-group {
      margin-bottom: 16px;
      animation: fadeInUp 0.7s cubic-bezier(0.16, 1, 0.3, 1) backwards;
    }

    .field-group:nth-child(1) { animation-delay: 0.6s; }
    .field-group:nth-child(2) { animation-delay: 0.7s; }
    .field-group:nth-child(3) { animation-delay: 0.8s; }

    .field-label {
      display: block;
      font-size: 12px;
      font-weight: 600;
      color: #a0b0c0;
      margin-bottom: 6px;
      text-transform: uppercase;
      letter-spacing: 0.04em;
    }

    .input-field {
      width: 100%;
      padding: 13px 15px;
      background: rgba(255, 255, 255, 0.06);
      border: 1.5px solid rgba(255, 255, 255, 0.15);
      border-radius: 8px;
      font-size: 14px;
      color: white;
      transition: all 0.2s ease;
    }

    .input-field::placeholder {
      color: #5a6a7a;
    }

    .input-field:focus {
      outline: none;
      border-color: rgba(120, 160, 200, 0.6);
      background: rgba(255, 255, 255, 0.1);
      animation: focusGlow 2s ease-in-out infinite;
    }

    .field-hint {
      font-size: 11px;
      color: #7a8a9a;
      margin-top: 5px;
    }

    /* Event selection - improved contrast */
    .selection-group {
      margin-bottom: 20px;
      animation: fadeInUp 0.7s cubic-bezier(0.16, 1, 0.3, 1) 0.9s backwards;
    }

    .selection-label {
      font-size: 12px;
      font-weight: 600;
      color: #a0b0c0;
      margin-bottom: 6px;
      display: block;
      text-transform: uppercase;
      letter-spacing: 0.04em;
    }

    .selection-helper {
      font-size: 12px;
      color: #7a8a9a;
      margin-bottom: 12px;
    }

    .checkbox-tiles {
      display: flex;
      gap: 12px;
    }

    /* Checkbox tiles - increased contrast and click target */
    .checkbox-tile {
      flex: 1;
      padding: 16px 18px;
      background: rgba(255, 255, 255, 0.05);
      border: 2px solid rgba(255, 255, 255, 0.15);
      border-radius: 10px;
      color: #9aaabc;
      font-size: 14px;
      font-weight: 500;
      cursor: pointer;
      text-align: center;
      transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      position: relative;
      overflow: hidden;
    }

    /* Ripple container */
    .checkbox-tile::after {
      content: '';
      position: absolute;
      inset: 0;
      background: radial-gradient(circle at var(--x, 50%) var(--y, 50%), rgba(74, 144, 208, 0.4), transparent 60%);
      opacity: 0;
      transition: opacity 0.5s;
      pointer-events: none;
    }

    .checkbox-tile:active::after {
      opacity: 1;
    }

    .checkbox-tile:hover {
      border-color: rgba(255, 255, 255, 0.3);
      background: rgba(255, 255, 255, 0.08);
      color: #bccce0;
      transform: translateY(-2px);
    }

    /* Strong selected state */
    .checkbox-tile.active {
      border-color: #4a90d0;
      background: rgba(74, 144, 208, 0.2);
      color: #a0d0ff;
      transform: translateY(-2px);
    }

    .checkbox-tile .check-icon {
      width: 20px;
      height: 20px;
      border: 2px solid rgba(255, 255, 255, 0.25);
      border-radius: 5px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s;
      flex-shrink: 0;
    }

    .checkbox-tile.active .check-icon {
      background: #4a90d0;
      border-color: #4a90d0;
    }

    .checkbox-tile .check-icon svg {
      width: 12px;
      height: 12px;
      color: white;
      opacity: 0;
      transform: scale(0);
      transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    .checkbox-tile.active .check-icon svg {
      opacity: 1;
      transform: scale(1);
    }

    .capacity-note {
      font-size: 11px;
      color: #7a8a9a;
      margin-top: 10px;
    }

    /* CTA button */
    .submit-btn {
      width: 100%;
      padding: 15px;
      background: linear-gradient(135deg, #3080d0, #2060a0);
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
      margin-top: 8px;
      position: relative;
      overflow: hidden;
      animation: fadeInUp 0.7s cubic-bezier(0.16, 1, 0.3, 1) 1s backwards;
    }

    /* Shimmer effect */
    .submit-btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.2),
        transparent
      );
      animation: shimmer 3s ease-in-out infinite;
    }

    .submit-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 35px rgba(48, 128, 208, 0.5);
    }

    .submit-btn:hover::before {
      animation: shimmer 1.5s ease-in-out infinite;
    }

    .submit-btn:active {
      transform: translateY(-1px);
    }

    /* Pulse animation when ready to submit */
    .submit-btn.ready {
      animation: pulseGlow 2s ease-in-out infinite;
    }

    /* Trust microcopy */
    .trust-copy {
      margin-top: 16px;
      text-align: center;
    }

    .trust-copy p {
      font-size: 11px;
      color: #6a7a8a;
      line-height: 1.6;
      margin-bottom: 3px;
    }

    /* Messages */
    .msg {
      padding: 12px;
      border-radius: 8px;
      font-size: 13px;
      text-align: center;
      margin-bottom: 16px;
    }

    .success {
      background: rgba(34, 180, 100, 0.15);
      color: #50d090;
      border: 1px solid rgba(34, 180, 100, 0.25);
    }

    .success:not(.hidden) {
      animation: successPop 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    .error {
      background: rgba(220, 80, 80, 0.15);
      color: #f08080;
      border: 1px solid rgba(220, 80, 80, 0.25);
    }

    .hidden { display: none; }

    /* === FLOATING PARTICLES === */
    .particles {
      position: absolute;
      inset: 0;
      z-index: 2;
      pointer-events: none;
      overflow: hidden;
    }

    .particle {
      position: absolute;
      width: 3px;
      height: 3px;
      background: rgba(120, 160, 200, 0.5);
      border-radius: 50%;
      animation: particleFloat 15s linear infinite;
    }

    .particle:nth-child(1) { left: 10%; animation-delay: 0s; animation-duration: 18s; }
    .particle:nth-child(2) { left: 20%; animation-delay: 2s; animation-duration: 20s; }
    .particle:nth-child(3) { left: 35%; animation-delay: 4s; animation-duration: 16s; }
    .particle:nth-child(4) { left: 50%; animation-delay: 1s; animation-duration: 22s; }
    .particle:nth-child(5) { left: 65%; animation-delay: 3s; animation-duration: 19s; }
    .particle:nth-child(6) { left: 80%; animation-delay: 5s; animation-duration: 17s; }
    .particle:nth-child(7) { left: 90%; animation-delay: 2.5s; animation-duration: 21s; }

    /* === CURSOR GLOW EFFECT === */
    .cursor-glow {
      position: fixed;
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(74, 144, 208, 0.08) 0%, transparent 70%);
      pointer-events: none;
      z-index: 1;
      transform: translate(-50%, -50%);
      transition: opacity 0.3s;
      opacity: 0;
    }

    .page:hover .cursor-glow {
      opacity: 1;
    }

    /* === MINIMAL FOOTER === */
    .minimal-footer {
      position: absolute;
      bottom: 1rem;
      left: 50%;
      transform: translateX(-50%);
      z-index: 20;
      font-size: 11px;
      color: rgba(255, 255, 255, 0.25);
    }

    .minimal-footer a {
      color: rgba(255, 255, 255, 0.35);
      text-decoration: none;
      transition: color 0.2s;
    }

    .minimal-footer a:hover {
      color: rgba(255, 255, 255, 0.6);
    }
  </style>

  <div class="page">
    <!-- Cursor glow follows mouse -->
    <div class="cursor-glow" id="cursorGlow"></div>

    <!-- Vignette overlay -->
    <div class="vignette"></div>

    <!-- Floating particles -->
    <div class="particles">
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
    </div>

    <div class="main-card">
      <!-- LEFT PANEL: INVITE SIDE -->
      <div class="invite-side">
        <!-- Brand row -->
        <div class="brand-row">
          <div class="brand-logo">♠</div>
          <span class="brand-name">Spades Institute</span>
          <span class="invite-pill">Invitation Only</span>
        </div>

        <!-- Headline -->
        <h1 class="headline">RSA Conference 2025</h1>

        <!-- Location -->
        <div class="location-line">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
          <span>San Francisco, CA</span>
        </div>

        <!-- Subhead -->
        <p class="subhead">Invitation-only gatherings for security leaders across government, industry, and academia during RSA week.</p>

        <!-- Event blocks -->
        <div class="events-list">
          <!-- Dinner -->
          <div class="event-block">
            <div class="event-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
              </svg>
            </div>
            <div class="event-details">
              <div class="event-header">
                <span class="event-name">Dinner</span>
                <span class="limited-tag">Limited seating</span>
              </div>
              <div class="event-datetime">Monday, April 28 · 6:30 PM PT</div>
              <div class="event-venue">Private venue near Moscone (details after approval)</div>
              <div class="event-description">Off-the-record conversation with senior security and national security leaders.</div>
            </div>
          </div>

          <!-- Breakfast -->
          <div class="event-block">
            <div class="event-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="5"></circle>
