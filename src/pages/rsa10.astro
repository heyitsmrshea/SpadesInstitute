---
import Layout from '../components/Layout.astro';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://www.spadesinstitute.org';

const events = [
  { id: 'dinner', name: 'Dinner', date: 'Apr 28', time: '6:30 PM' },
  { id: 'breakfast', name: 'Breakfast', date: 'Apr 29', time: '7:30 AM' }
];
---

<Layout title="RSA 2025 | Spades Institute" description="Join Spades Institute at RSA Conference 2025">
  <head slot="head">
    <link rel="canonical" href={`${siteUrl}${base}/rsa10`} />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  </head>

  <style>
    /* ===== RSA10: GRADIENT HERO + SIDEBAR FORM ===== */
    * { font-family: 'Outfit', sans-serif; box-sizing: border-box; margin: 0; padding: 0; }
    
    .page {
      min-height: 100vh;
      background: linear-gradient(135deg, #0f172a 0%, #1e3a5f 50%, #0c4a6e 100%);
      padding: 1.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .main-card {
      background: white;
      border-radius: 24px;
      overflow: hidden;
      display: grid;
      grid-template-columns: 1fr 380px;
      max-width: 900px;
      width: 100%;
      box-shadow: 0 25px 80px rgba(0,0,0,0.3);
    }
    
    @media (max-width: 800px) {
      .main-card { grid-template-columns: 1fr; }
    }
    
    .content-side {
      padding: 2.5rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    
    .logo { font-size: 12px; font-weight: 700; color: #1e40af; text-transform: uppercase; letter-spacing: 0.15em; margin-bottom: 1rem; }
    .title { font-size: 2rem; font-weight: 800; color: #1f2937; margin-bottom: 0.75rem; line-height: 1.2; }
    .subtitle { font-size: 15px; color: #6b7280; line-height: 1.6; margin-bottom: 1.5rem; }
    
    .events-list { display: flex; flex-direction: column; gap: 0.75rem; }
    
    .event-item {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 0.75rem 1rem;
      background: #f3f4f6;
      border-radius: 10px;
    }
    
    .event-icon {
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, #1e40af, #0f172a);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 18px;
    }
    
    .event-info { flex: 1; }
    .event-name { font-weight: 600; color: #1f2937; font-size: 15px; }
    .event-time { font-size: 13px; color: #6b7280; }
    
    .form-side {
      background: #1f2937;
      padding: 2rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    
    .form-title { font-size: 1.25rem; font-weight: 700; color: white; margin-bottom: 1.25rem; }
    
    .input-field {
      width: 100%;
      padding: 0.875rem 1rem;
      background: #374151;
      border: 1px solid #4b5563;
      border-radius: 10px;
      font-size: 14px;
      color: white;
      margin-bottom: 0.75rem;
    }
    .input-field::placeholder { color: #9ca3af; }
    .input-field:focus { outline: none; border-color: #3b82f6; }
    
    .checkbox-group { margin-bottom: 1rem; }
    .checkbox-label { font-size: 13px; color: #9ca3af; margin-bottom: 0.5rem; display: block; }
    
    .checkbox-options { display: flex; gap: 0.5rem; }
    
    .checkbox-btn {
      flex: 1;
      padding: 0.625rem;
      background: #374151;
      border: 2px solid #4b5563;
      border-radius: 8px;
      color: #d1d5db;
      font-size: 13px;
      font-weight: 500;
      cursor: pointer;
      text-align: center;
      transition: all 0.15s;
    }
    .checkbox-btn:hover { border-color: #6b7280; }
    .checkbox-btn.active { border-color: #3b82f6; background: rgba(59,130,246,0.1); color: #3b82f6; }
    
    .submit-btn {
      width: 100%;
      padding: 0.875rem;
      background: linear-gradient(135deg, #1e40af, #0f172a);
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
    }
    .submit-btn:hover { transform: translateY(-2px); box-shadow: 0 4px 20px rgba(30,64,175,0.4); }
    
    .msg { padding: 0.75rem; border-radius: 8px; font-size: 13px; text-align: center; margin-bottom: 0.75rem; }
    .success { background: rgba(34,197,94,0.2); color: #4ade80; }
    .error { background: rgba(239,68,68,0.2); color: #f87171; }
    .hidden { display: none; }
    
    .form-footer { text-align: center; margin-top: 1rem; font-size: 12px; color: #6b7280; }
    .form-footer a { color: #60a5fa; text-decoration: none; }

    /* Spades Logo */
    .spades-logo-inline {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 0.5rem;
    }

    .spades-logo-icon-sm {
      width: 28px;
      height: 28px;
      background: linear-gradient(135deg, #1e40af, #0f172a);
      border-radius: 6px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 14px;
      color: white;
    }

    /* Gradient animation */
    .page {
      animation: gradientShift 15s ease infinite;
      background-size: 200% 200%;
    }

    @keyframes gradientShift {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    /* Card entrance animation */
    .main-card {
      animation: cardEnter 0.6s ease-out;
    }

    @keyframes cardEnter {
      0% { opacity: 0; transform: translateY(30px); }
      100% { opacity: 1; transform: translateY(0); }
    }

    /* Card shadow pulse */
    .main-card {
      animation: cardEnter 0.6s ease-out, shadowPulse 4s ease-in-out infinite 0.6s;
    }

    @keyframes shadowPulse {
      0%, 100% { box-shadow: 0 25px 80px rgba(0,0,0,0.3); }
      50% { box-shadow: 0 30px 100px rgba(30, 64, 175, 0.4); }
    }

    /* Secure form indicator */
    .secure-indicator {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      font-size: 11px;
      color: #22c55e;
      margin-bottom: 1rem;
    }

    .secure-indicator svg {
      width: 14px;
      height: 14px;
    }

    /* Field validation */
    .input-valid {
      border-color: #22c55e !important;
    }

    .input-valid + .validation-check {
      display: block;
    }

    .validation-check {
      display: none;
      position: absolute;
      right: 1rem;
      top: 50%;
      transform: translateY(-50%);
      color: #22c55e;
      font-size: 14px;
    }

    .input-wrapper {
      position: relative;
    }

    /* Capacity indicator */
    .capacity-indicator {
      background: linear-gradient(90deg, #fef3c7, #fde68a);
      color: #92400e;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-size: 12px;
      font-weight: 600;
      text-align: center;
      margin-bottom: 1rem;
    }

    /* Submit button glow */
    .submit-btn:hover {
      box-shadow: 0 0 30px rgba(30, 64, 175, 0.5);
    }

    /* Post signup next steps */
    .next-steps {
      text-align: center;
      padding: 1rem;
      background: rgba(34, 197, 94, 0.1);
      border: 1px solid rgba(34, 197, 94, 0.2);
      border-radius: 8px;
      margin-top: 1rem;
    }

    .next-steps-icon {
      font-size: 24px;
      margin-bottom: 0.5rem;
    }

    .next-steps-text {
      font-size: 13px;
      color: #22c55e;
    }

    /* Custom event icons instead of emoji */
    .event-icon-custom {
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, #1e40af, #0f172a);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .event-icon-custom svg {
      width: 22px;
      height: 22px;
      color: white;
    }
  </style>

  <div class="page">
    <div class="main-card">
      <div class="content-side">
        <!-- Logo -->
        <div class="spades-logo-inline">
          <div class="spades-logo-icon-sm">â™ </div>
          <p class="logo">Spades Institute</p>
        </div>
        <h1 class="title">RSA Conference 2025</h1>
        <p class="subtitle">Exclusive invitation-only gatherings bringing together government, industry, and academia leaders in San Francisco.</p>
        
        <div class="events-list">
          {events.map(e => (
            <div class="event-item">
              <div class="event-icon-custom">
                {e.name === 'Dinner' ? (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
                  </svg>
                ) : (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="5"></circle>
                    <line x1="12" y1="1" x2="12" y2="3"></line>
                    <line x1="12" y1="21" x2="12" y2="23"></line>
                    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                    <line x1="1" y1="12" x2="3" y2="12"></line>
                    <line x1="21" y1="12" x2="23" y2="12"></line>
                    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
                  </svg>
                )}
              </div>
              <div class="event-info">
                <div class="event-name">{e.name}</div>
                <div class="event-time">{e.date} Â· {e.time}</div>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <div class="form-side">
        <!-- Secure Indicator -->
        <div class="secure-indicator">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
          </svg>
          <span>Secure & Confidential</span>
        </div>

        <h2 class="form-title">Request Invitation</h2>

        <!-- Capacity Indicator -->
        <div class="capacity-indicator">Limited capacity remaining</div>

        <div id="success-msg" class="msg success hidden">âœ“ Request sent!</div>
        <div id="error-msg" class="msg error hidden">Try again</div>
        
        <form id="rsaForm">
          <input type="text" name="name" placeholder="Your name" required class="input-field" />
          <input type="text" name="company" placeholder="Organization" required class="input-field" />
          <input type="email" name="email" placeholder="Email address" required class="input-field" />
          
          <div class="checkbox-group">
            <span class="checkbox-label">Select event(s)</span>
            <div class="checkbox-options">
              {events.map(e => (
                <button type="button" class="checkbox-btn" data-event={e.id}>{e.name}</button>
              ))}
            </div>
          </div>
          
          <button type="submit" class="submit-btn">Submit Request â†’</button>
        </form>
        
        <!-- Next Steps (shown after success) -->
        <div id="next-steps" class="next-steps hidden">
          <div class="next-steps-icon">ðŸ“¬</div>
          <div class="next-steps-text">Check your inbox for venue details</div>
        </div>

        <div class="form-footer">
          <a href="mailto:info@spadesinstitute.org">Contact</a> Â· <a href={`${base}/`}>Home</a>
        </div>
      </div>
    </div>
  </div>

  <script>
    const btns = document.querySelectorAll('.checkbox-btn');
    const selected = new Set();
    
    btns.forEach(btn => {
      btn.addEventListener('click', () => {
        const id = btn.getAttribute('data-event') || '';
        if (selected.has(id)) { selected.delete(id); btn.classList.remove('active'); }
        else { selected.add(id); btn.classList.add('active'); }
      });
    });
    
    const form = document.getElementById('rsaForm');
    const successEl = document.getElementById('success-msg');
    const errorEl = document.getElementById('error-msg');
    const nextStepsEl = document.getElementById('next-steps');
    
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      successEl?.classList.add('hidden');
      errorEl?.classList.add('hidden');
      
      if (selected.size === 0) {
        if (errorEl) { errorEl.textContent = 'Select an event'; errorEl.classList.remove('hidden'); }
        return;
      }
      
      const data = new FormData(form);
      
      try {
        const res = await fetch('https://api.web3forms.com/submit', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            access_key: '217a97ca-0557-4364-86f7-66e28fbd499f',
            subject: `RSA 2025 - ${data.get('name')}`,
            email: data.get('email'),
            message: `Name: ${data.get('name')}\nOrg: ${data.get('company')}\nEmail: ${data.get('email')}\nEvents: ${Array.from(selected).join(', ')}`
          })
        });
        if ((await res.json()).success) {
          successEl?.classList.remove('hidden');
          nextStepsEl?.classList.remove('hidden');
          form.reset();
          btns.forEach(b => b.classList.remove('active'));
          selected.clear();
        } else { errorEl?.classList.remove('hidden'); }
      } catch { errorEl?.classList.remove('hidden'); }
    });
  </script>
</Layout>
