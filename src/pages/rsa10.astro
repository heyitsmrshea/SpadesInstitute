---
import Layout from '../components/Layout.astro';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://www.spadesinstitute.org';
---

<Layout title="RSA 2025 | Spades Institute" description="Join Spades Institute at RSA Conference 2025">
  <head slot="head">
    <link rel="canonical" href={`${siteUrl}${base}/rsa10`} />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>

  <style>
    /* ===== RSA10: PREMIUM REDESIGN ===== */
    * { font-family: 'Inter', sans-serif; box-sizing: border-box; margin: 0; padding: 0; }

    /* === 1) BACKGROUND TREATMENT === */
    .page {
      min-height: 100vh;
      padding: 2rem;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
      /* Clean gradient wash: deep navy top-left to lighter blue bottom-right */
      background: linear-gradient(135deg, #0a1628 0%, #0f2847 50%, #1a3a5c 100%);
    }

    /* Single faint F-18 silhouette - subtle texture */
    .page::before {
      content: '';
      position: absolute;
      inset: 0;
      background: url('/blog/fighter-jet.jpg') center center / cover no-repeat;
      opacity: 0.08;
      filter: blur(30px) grayscale(30%);
      z-index: 0;
    }

    /* Soft vignette - calm center */
    .page::after {
      content: '';
      position: absolute;
      inset: 0;
      background: radial-gradient(ellipse at center, transparent 30%, rgba(10, 22, 40, 0.7) 100%);
      z-index: 1;
      pointer-events: none;
    }

    /* === 2) CARD LAYOUT === */
    .main-card {
      background: white;
      border-radius: 26px;
      overflow: hidden;
      display: grid;
      grid-template-columns: 55% 45%;
      max-width: 920px;
      width: 100%;
      /* Subtle drop shadow - one soft shadow */
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.25), 0 8px 24px rgba(0, 0, 0, 0.15);
      position: relative;
      z-index: 2;
    }

    @media (max-width: 800px) {
      .main-card { grid-template-columns: 1fr; }
    }

    /* === LEFT PANEL (INVITE SIDE) === */
    .invite-side {
      padding: 44px;
      display: flex;
      flex-direction: column;
      background: #fafbfc;
    }

    @media (max-width: 800px) {
      .invite-side { padding: 28px; }
    }

    /* Brand row */
    .brand-row {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 28px;
    }

    .brand-logo {
      width: 36px;
      height: 36px;
      background: linear-gradient(135deg, #1e3a5f, #0f172a);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 18px;
    }

    .brand-name {
      font-size: 13px;
      font-weight: 600;
      color: #1e3a5f;
      text-transform: uppercase;
      letter-spacing: 0.12em;
    }

    .operation-tag {
      margin-left: auto;
      font-size: 10px;
      font-weight: 600;
      color: #64748b;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      padding: 4px 10px;
      background: #e2e8f0;
      border-radius: 4px;
    }

    /* Headline */
    .headline {
      font-size: 1.85rem;
      font-weight: 700;
      color: #0f172a;
      margin-bottom: 12px;
      line-height: 1.2;
      letter-spacing: -0.02em;
    }

    /* Subhead */
    .subhead {
      font-size: 15px;
      color: #475569;
      line-height: 1.65;
      margin-bottom: 28px;
    }

    /* Event blocks */
    .events-list {
      display: flex;
      flex-direction: column;
      gap: 16px;
      margin-bottom: 24px;
    }

    .event-block {
      display: flex;
      gap: 14px;
      padding: 16px;
      background: white;
      border: 1px solid #e2e8f0;
      border-radius: 12px;
    }

    .event-icon {
      width: 44px;
      height: 44px;
      background: linear-gradient(135deg, #1e3a5f, #2d4a6f);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    .event-icon svg {
      width: 22px;
      height: 22px;
      color: white;
    }

    .event-details {
      flex: 1;
      min-width: 0;
    }

    .event-name {
      font-size: 16px;
      font-weight: 600;
      color: #0f172a;
      margin-bottom: 2px;
    }

    .event-datetime {
      font-size: 13px;
      color: #64748b;
      margin-bottom: 4px;
    }

    .event-venue {
      font-size: 12px;
      color: #94a3b8;
      margin-bottom: 6px;
    }

    .event-description {
      font-size: 13px;
      color: #475569;
      line-height: 1.5;
    }

    /* Footer note */
    .invite-footer {
      margin-top: auto;
      padding-top: 20px;
      border-top: 1px solid #e2e8f0;
      font-size: 12px;
      color: #94a3b8;
      line-height: 1.5;
    }

    /* === RIGHT PANEL (FORM SIDE) === */
    .form-side {
      background: #1a2332;
      padding: 44px 40px;
      display: flex;
      flex-direction: column;
    }

    @media (max-width: 800px) {
      .form-side { padding: 28px 24px; }
    }

    /* Form header */
    .form-header {
      margin-bottom: 24px;
    }

    .form-title {
      font-size: 1.35rem;
      font-weight: 600;
      color: white;
      margin-bottom: 10px;
    }

    .form-badge {
      display: inline-block;
      font-size: 11px;
      font-weight: 500;
      color: #94a3b8;
      text-transform: uppercase;
      letter-spacing: 0.06em;
      padding: 5px 12px;
      background: rgba(255, 255, 255, 0.08);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 6px;
    }

    /* Form fields with visible labels */
    .field-group {
      margin-bottom: 16px;
    }

    .field-label {
      display: block;
      font-size: 13px;
      font-weight: 500;
      color: #cbd5e1;
      margin-bottom: 6px;
    }

    .input-field {
      width: 100%;
      padding: 12px 14px;
      background: rgba(255, 255, 255, 0.06);
      border: 1px solid rgba(255, 255, 255, 0.15);
      border-radius: 8px;
      font-size: 14px;
      color: white;
      transition: all 0.2s ease;
    }

    .input-field::placeholder {
      color: #64748b;
    }

    .input-field:focus {
      outline: none;
      border-color: rgba(255, 255, 255, 0.4);
      background: rgba(255, 255, 255, 0.1);
      box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.08);
    }

    /* Event selection */
    .selection-group {
      margin-bottom: 20px;
    }

    .selection-label {
      font-size: 13px;
      font-weight: 500;
      color: #cbd5e1;
      margin-bottom: 8px;
      display: block;
    }

    .selection-helper {
      font-size: 12px;
      color: #64748b;
      margin-bottom: 10px;
    }

    .checkbox-tiles {
      display: flex;
      gap: 10px;
    }

    .checkbox-tile {
      flex: 1;
      padding: 12px 16px;
      background: rgba(255, 255, 255, 0.06);
      border: 2px solid rgba(255, 255, 255, 0.12);
      border-radius: 10px;
      color: #94a3b8;
      font-size: 14px;
      font-weight: 500;
      cursor: pointer;
      text-align: center;
      transition: all 0.2s ease;
    }

    .checkbox-tile:hover {
      border-color: rgba(255, 255, 255, 0.25);
      background: rgba(255, 255, 255, 0.08);
    }

    .checkbox-tile.active {
      border-color: #3b82f6;
      background: rgba(59, 130, 246, 0.15);
      color: #93c5fd;
    }

    .capacity-note {
      font-size: 11px;
      color: #64748b;
      margin-top: 8px;
    }

    /* CTA button */
    .submit-btn {
      width: 100%;
      padding: 14px;
      background: linear-gradient(135deg, #2563eb, #1d4ed8);
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;
      margin-top: 8px;
    }

    .submit-btn:hover {
      transform: translateY(-1px);
      box-shadow: 0 8px 20px rgba(37, 99, 235, 0.35);
    }

    .submit-btn:active {
      transform: translateY(0);
    }

    /* Trust microcopy */
    .trust-copy {
      margin-top: 16px;
      text-align: center;
    }

    .trust-copy p {
      font-size: 11px;
      color: #64748b;
      line-height: 1.6;
      margin-bottom: 4px;
    }

    /* Messages */
    .msg {
      padding: 12px;
      border-radius: 8px;
      font-size: 13px;
      text-align: center;
      margin-bottom: 16px;
    }

    .success {
      background: rgba(34, 197, 94, 0.15);
      color: #4ade80;
      border: 1px solid rgba(34, 197, 94, 0.2);
    }

    .error {
      background: rgba(239, 68, 68, 0.15);
      color: #f87171;
      border: 1px solid rgba(239, 68, 68, 0.2);
    }

    .hidden { display: none; }

    /* === SITE FOOTER (outside card) === */
    .site-footer {
      position: absolute;
      bottom: 1rem;
      left: 50%;
      transform: translateX(-50%);
      z-index: 3;
      font-size: 11px;
      color: rgba(255, 255, 255, 0.4);
    }

    .site-footer a {
      color: rgba(255, 255, 255, 0.5);
      text-decoration: none;
      transition: color 0.2s;
    }

    .site-footer a:hover {
      color: rgba(255, 255, 255, 0.8);
    }
  </style>

  <div class="page">
    <div class="main-card">
      <!-- LEFT PANEL: INVITE SIDE -->
      <div class="invite-side">
        <!-- Brand row -->
        <div class="brand-row">
          <div class="brand-logo">♠</div>
          <span class="brand-name">Spades Institute</span>
          <span class="operation-tag">RSA 2025</span>
        </div>

        <!-- Headline -->
        <h1 class="headline">RSA Conference 2025</h1>

        <!-- Subhead -->
        <p class="subhead">Invitation-only gatherings for security leaders across government, industry, and academia during RSA week in San Francisco.</p>

        <!-- Event blocks -->
        <div class="events-list">
          <!-- Dinner -->
          <div class="event-block">
            <div class="event-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
              </svg>
            </div>
            <div class="event-details">
              <div class="event-name">Dinner</div>
              <div class="event-datetime">Mon, Apr 28 · 6:30 PM PT</div>
              <div class="event-venue">Private venue near Moscone (details after approval)</div>
              <div class="event-description">Off-the-record conversation with senior security and national security leaders.</div>
            </div>
          </div>

          <!-- Breakfast -->
          <div class="event-block">
            <div class="event-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="5"></circle>
                <line x1="12" y1="1" x2="12" y2="3"></line>
                <line x1="12" y1="21" x2="12" y2="23"></line>
                <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                <line x1="1" y1="12" x2="3" y2="12"></line>
                <line x1="21" y1="12" x2="23" y2="12"></line>
                <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
              </svg>
            </div>
            <div class="event-details">
              <div class="event-name">Breakfast</div>
              <div class="event-datetime">Tue, Apr 29 · 7:30 AM PT</div>
              <div class="event-venue">Walking distance from Moscone (details after approval)</div>
              <div class="event-description">Small-group briefing and networking before the show floor opens.</div>
            </div>
          </div>
        </div>

        <!-- Footer note -->
        <div class="invite-footer">
          Space is limited. Requests are reviewed within 24 hours.
        </div>
      </div>

      <!-- RIGHT PANEL: FORM SIDE -->
      <div class="form-side">
        <div class="form-header">
          <h2 class="form-title">Invitation request</h2>
          <span class="form-badge">Invitation-only · Approval required</span>
        </div>

        <div id="success-msg" class="msg success hidden">Your request has been submitted. You'll receive confirmation if approved.</div>
        <div id="error-msg" class="msg error hidden">Something went wrong. Please try again.</div>

        <form id="rsaForm">
          <div class="field-group">
            <label class="field-label" for="name">Full name</label>
            <input type="text" id="name" name="name" required class="input-field" placeholder="Jane Smith" />
          </div>

          <div class="field-group">
            <label class="field-label" for="company">Organization</label>
            <input type="text" id="company" name="company" required class="input-field" placeholder="Acme Corp" />
          </div>

          <div class="field-group">
            <label class="field-label" for="email">Work email</label>
            <input type="email" id="email" name="email" required class="input-field" placeholder="jane@acme.com" />
          </div>

          <div class="selection-group">
            <label class="selection-label">Events</label>
            <p class="selection-helper">Select one or both events</p>
            <div class="checkbox-tiles">
              <button type="button" class="checkbox-tile" data-event="dinner">Dinner</button>
              <button type="button" class="checkbox-tile" data-event="breakfast">Breakfast</button>
            </div>
            <p class="capacity-note">Dinner seating is more limited than breakfast.</p>
          </div>

          <button type="submit" class="submit-btn">Request invitation</button>
        </form>

        <div class="trust-copy">
          <p>We'll only use this to confirm attendance. No marketing.</p>
          <p>You'll receive a confirmation email if approved.</p>
        </div>
      </div>
    </div>

    <!-- Site footer outside card -->
    <div class="site-footer">
      <a href="mailto:info@spadesinstitute.org">Contact</a> · <a href={`${base}/`}>Home</a>
    </div>
  </div>

  <script>
    const tiles = document.querySelectorAll('.checkbox-tile');
    const selected = new Set();

    tiles.forEach(tile => {
      tile.addEventListener('click', () => {
        const id = tile.getAttribute('data-event') || '';
        if (selected.has(id)) {
          selected.delete(id);
          tile.classList.remove('active');
        } else {
          selected.add(id);
          tile.classList.add('active');
        }
      });
    });

    const form = document.getElementById('rsaForm');
    const successEl = document.getElementById('success-msg');
    const errorEl = document.getElementById('error-msg');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      successEl?.classList.add('hidden');
      errorEl?.classList.add('hidden');

      if (selected.size === 0) {
        if (errorEl) {
          errorEl.textContent = 'Please select at least one event';
          errorEl.classList.remove('hidden');
        }
        return;
      }

      const data = new FormData(form);

      try {
        const res = await fetch('https://api.web3forms.com/submit', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            access_key: '217a97ca-0557-4364-86f7-66e28fbd499f',
            subject: `RSA 2025 Invitation Request - ${data.get('name')}`,
            email: data.get('email'),
            message: `Name: ${data.get('name')}\nOrganization: ${data.get('company')}\nEmail: ${data.get('email')}\nEvents: ${Array.from(selected).join(', ')}`
          })
        });
        if ((await res.json()).success) {
          successEl?.classList.remove('hidden');
          form.reset();
          tiles.forEach(t => t.classList.remove('active'));
          selected.clear();
        } else {
          errorEl?.classList.remove('hidden');
        }
      } catch {
        errorEl?.classList.remove('hidden');
      }
    });
  </script>
</Layout>
