---
import Layout from '../components/Layout.astro';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://www.spadesinstitute.org';

// Event Details
const events = [
  {
    id: 'dinner',
    name: 'Mission Brief: Dinner',
    tagline: 'An evening of trusted conversation',
    date: 'Monday, April 28, 2025',
    time: '6:30 PM - 9:30 PM PT',
    location: 'San Francisco, CA',
    locationDetail: 'Venue details shared upon confirmation',
    description: 'Join fellow operators, innovators, and government leaders for an intimate dinner conversation on the intersection of cybersecurity and national security.',
    calendarStart: '20250428T183000',
    calendarEnd: '20250428T213000',
  },
  {
    id: 'breakfast',
    name: 'Mission Brief: Breakfast',
    tagline: 'Start the day with purpose',
    date: 'Tuesday, April 29, 2025',
    time: '7:30 AM - 9:00 AM PT',
    location: 'San Francisco, CA',
    locationDetail: 'Venue details shared upon confirmation',
    description: 'A working breakfast bringing together senior leaders to discuss emerging threats, opportunities, and collaborative solutions.',
    calendarStart: '20250429T073000',
    calendarEnd: '20250429T090000',
  }
];

function getGoogleCalendarUrl(event: typeof events[0]) {
  const title = encodeURIComponent(`Spades Institute: ${event.name}`);
  const details = encodeURIComponent(`${event.description}\n\nHosted by Spades Institute at RSA Conference 2025`);
  const location = encodeURIComponent(`${event.location}`);
  return `https://calendar.google.com/calendar/render?action=TEMPLATE&text=${title}&dates=${event.calendarStart}/${event.calendarEnd}&details=${details}&location=${location}&ctz=America/Los_Angeles`;
}

function getICSContent(event: typeof events[0]) {
  return `BEGIN:VCALENDAR
VERSION:2.0
PRODID:-//Spades Institute//RSA Events//EN
BEGIN:VEVENT
DTSTART;TZID=America/Los_Angeles:${event.calendarStart}
DTEND;TZID=America/Los_Angeles:${event.calendarEnd}
SUMMARY:Spades Institute: ${event.name}
DESCRIPTION:${event.description}\\n\\nHosted by Spades Institute at RSA Conference 2025
LOCATION:${event.location}
END:VEVENT
END:VCALENDAR`;
}
---

<Layout
  title="RSA Conference 2025 | Spades Institute - V2"
  description="Join Spades Institute at RSA Conference 2025 for exclusive dinner and breakfast events."
>
  <head slot="head">
    <link rel="canonical" href={`${siteUrl}${base}/rsa2`} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Rajdhani:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>

  <style>
    /* ===== V2: F-18 FIGHTER JETS - PREMIUM AVIATION ===== */
    
    .font-aviation {
      font-family: 'Orbitron', sans-serif;
    }
    
    .font-tech {
      font-family: 'Rajdhani', sans-serif;
    }

    /* Sky gradient background */
    .sky-gradient {
      background: linear-gradient(180deg, 
        #0c1929 0%, 
        #1a3a5c 25%,
        #2d5a87 50%,
        #1a3a5c 75%,
        #0c1929 100%);
      position: relative;
      overflow: hidden;
    }

    /* Cloud layer */
    .cloud-layer {
      position: absolute;
      inset: 0;
      background: 
        radial-gradient(ellipse 100% 50% at 20% 80%, rgba(255,255,255,0.03) 0%, transparent 50%),
        radial-gradient(ellipse 80% 40% at 70% 90%, rgba(255,255,255,0.02) 0%, transparent 50%);
      pointer-events: none;
    }

    /* F-18 Fighter Jet SVG Animation */
    .jet-formation {
      position: absolute;
      width: 100%;
      height: 100%;
      pointer-events: none;
      overflow: hidden;
    }

    .f18-jet {
      position: absolute;
      filter: drop-shadow(0 20px 40px rgba(0,0,0,0.5));
    }

    .jet-leader {
      width: 280px;
      top: 25%;
      left: -300px;
      animation: flyAcross 8s ease-in-out infinite;
    }

    .jet-wingman-1 {
      width: 200px;
      top: 35%;
      left: -400px;
      animation: flyAcross 8s ease-in-out infinite;
      animation-delay: 0.3s;
    }

    .jet-wingman-2 {
      width: 200px;
      top: 18%;
      left: -400px;
      animation: flyAcross 8s ease-in-out infinite;
      animation-delay: 0.6s;
    }

    /* Contrails */
    .jet-leader::after,
    .jet-wingman-1::after,
    .jet-wingman-2::after {
      content: '';
      position: absolute;
      top: 50%;
      right: 100%;
      width: 400px;
      height: 2px;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), rgba(255,255,255,0.1));
      transform: translateY(-50%);
      animation: contrailFade 2s ease-out infinite;
    }

    @keyframes flyAcross {
      0% {
        transform: translateX(0) translateY(0) rotate(-2deg);
        opacity: 0;
      }
      5% {
        opacity: 1;
      }
      50% {
        transform: translateX(calc(100vw + 400px)) translateY(-50px) rotate(-3deg);
        opacity: 1;
      }
      55% {
        opacity: 0;
      }
      100% {
        transform: translateX(calc(100vw + 400px)) translateY(-50px) rotate(-3deg);
        opacity: 0;
      }
    }

    /* Afterburner glow effect */
    .afterburner {
      position: absolute;
      width: 60px;
      height: 20px;
      background: radial-gradient(ellipse at left, #ff6b35 0%, #ffcc00 30%, transparent 70%);
      filter: blur(4px);
      opacity: 0.9;
      animation: burnerFlicker 0.1s ease-in-out infinite alternate;
    }

    @keyframes burnerFlicker {
      0% { opacity: 0.7; transform: scaleX(0.9); }
      100% { opacity: 1; transform: scaleX(1.1); }
    }

    /* Contrails */
    .contrail {
      position: absolute;
      height: 3px;
      background: linear-gradient(90deg, rgba(255,255,255,0.6), transparent);
      animation: contrailFade 2s ease-out infinite;
    }

    @keyframes contrailFade {
      0% { width: 0; opacity: 0.8; }
      50% { width: 400px; opacity: 0.4; }
      100% { width: 600px; opacity: 0; }
    }

    /* Hero title with chrome effect */
    .chrome-text {
      background: linear-gradient(180deg, #ffffff 0%, #a8c8e8 40%, #6b9cc4 60%, #ffffff 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-shadow: none;
      filter: drop-shadow(0 4px 8px rgba(0,0,0,0.3));
    }

    /* Aviation panel styling */
    .aviation-panel {
      background: linear-gradient(135deg, rgba(20,40,60,0.9) 0%, rgba(10,25,40,0.95) 100%);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(168,200,232,0.2);
      border-radius: 8px;
      position: relative;
      overflow: hidden;
    }

    .aviation-panel::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, #3b82f6, #60a5fa, #3b82f6);
    }

    .aviation-panel:hover {
      border-color: rgba(168,200,232,0.4);
      box-shadow: 0 20px 60px rgba(59,130,246,0.15);
      transform: translateY(-4px);
      transition: all 0.3s ease;
    }

    /* Squadron badge */
    .squadron-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.375rem 1rem;
      background: rgba(59,130,246,0.15);
      border: 1px solid rgba(59,130,246,0.4);
      border-radius: 20px;
      font-family: 'Rajdhani', sans-serif;
      font-weight: 600;
      font-size: 12px;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      color: #60a5fa;
    }

    /* Status lights */
    .status-light {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .status-light::before {
      content: '';
      width: 8px;
      height: 8px;
      background: #22c55e;
      border-radius: 50%;
      box-shadow: 0 0 10px #22c55e;
      animation: statusPulse 2s ease-in-out infinite;
    }

    @keyframes statusPulse {
      0%, 100% { box-shadow: 0 0 10px #22c55e; }
      50% { box-shadow: 0 0 20px #22c55e, 0 0 30px rgba(34,197,94,0.5); }
    }

    /* Blue tactical buttons */
    .btn-aviation {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      background: rgba(59,130,246,0.1);
      border: 1px solid rgba(59,130,246,0.4);
      border-radius: 6px;
      font-family: 'Rajdhani', sans-serif;
      font-weight: 600;
      font-size: 13px;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      color: #60a5fa;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .btn-aviation:hover {
      background: rgba(59,130,246,0.2);
      border-color: #60a5fa;
      box-shadow: 0 0 30px rgba(59,130,246,0.3);
    }

    .btn-aviation-primary {
      background: linear-gradient(135deg, #3b82f6, #2563eb);
      border: 2px solid #60a5fa;
      color: white;
    }

    .btn-aviation-primary:hover {
      background: linear-gradient(135deg, #60a5fa, #3b82f6);
      box-shadow: 0 0 40px rgba(59,130,246,0.5);
    }

    /* Input styling */
    .input-aviation {
      width: 100%;
      padding: 0.875rem 1rem;
      background: rgba(20,40,60,0.6);
      border: 1px solid rgba(59,130,246,0.2);
      border-radius: 6px;
      font-family: 'Rajdhani', sans-serif;
      font-size: 15px;
      color: #e2e8f0;
      transition: all 0.3s ease;
    }

    .input-aviation:focus {
      outline: none;
      border-color: #3b82f6;
      box-shadow: 0 0 0 3px rgba(59,130,246,0.1);
    }

    .input-aviation::placeholder {
      color: rgba(148,163,184,0.5);
    }

    /* Checkbox */
    .checkbox-aviation {
      appearance: none;
      width: 22px;
      height: 22px;
      border: 2px solid rgba(59,130,246,0.4);
      border-radius: 4px;
      background: rgba(20,40,60,0.6);
      cursor: pointer;
      transition: all 0.2s ease;
      flex-shrink: 0;
    }

    .checkbox-aviation:checked {
      background: #3b82f6;
      border-color: #3b82f6;
    }

    .checkbox-aviation:checked::after {
      content: '✓';
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 14px;
      color: white;
      height: 100%;
    }

    /* Altitude indicator */
    .altitude-bar {
      position: absolute;
      right: 40px;
      top: 50%;
      transform: translateY(-50%);
      height: 200px;
      width: 40px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-between;
      font-family: 'Rajdhani', sans-serif;
      font-size: 10px;
      color: rgba(96,165,250,0.6);
    }

    .altitude-bar::after {
      content: '';
      position: absolute;
      left: 50%;
      top: 0;
      bottom: 0;
      width: 1px;
      background: linear-gradient(180deg, transparent, rgba(96,165,250,0.3), transparent);
    }

    /* Speed indicator */
    .speed-indicator {
      position: absolute;
      left: 40px;
      top: 50%;
      transform: translateY(-50%);
      font-family: 'Rajdhani', sans-serif;
      font-size: 12px;
      color: rgba(96,165,250,0.6);
      writing-mode: vertical-lr;
      text-orientation: mixed;
      letter-spacing: 0.2em;
    }

    /* Wing emblem animation */
    .wing-emblem {
      position: relative;
      display: inline-block;
    }

    .wing-emblem::before,
    .wing-emblem::after {
      content: '◢';
      position: absolute;
      top: 50%;
      font-size: 20px;
      color: rgba(59,130,246,0.4);
      transform: translateY(-50%);
    }

    .wing-emblem::before {
      left: -30px;
      transform: translateY(-50%) scaleX(-1);
    }

    .wing-emblem::after {
      right: -30px;
    }

    /* Data grid */
    .data-grid {
      display: grid;
      gap: 0.5rem;
      padding: 0.75rem;
      background: rgba(0,0,0,0.2);
      border-radius: 6px;
      border: 1px solid rgba(59,130,246,0.1);
    }

    .data-row {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .data-icon {
      width: 18px;
      height: 18px;
      color: rgba(96,165,250,0.7);
    }

    /* Reveal animations */
    .reveal-up {
      opacity: 0;
      transform: translateY(30px);
      animation: revealUp 0.8s ease-out forwards;
    }

    .reveal-delay-1 { animation-delay: 0.1s; }
    .reveal-delay-2 { animation-delay: 0.2s; }
    .reveal-delay-3 { animation-delay: 0.3s; }
    .reveal-delay-4 { animation-delay: 0.4s; }

    @keyframes revealUp {
      to { opacity: 1; transform: translateY(0); }
    }

    /* Section divider */
    .divider-wings {
      position: relative;
      height: 60px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .divider-wings::before {
      content: '';
      position: absolute;
      left: 0;
      right: 0;
      height: 1px;
      background: linear-gradient(90deg, transparent, rgba(59,130,246,0.4), transparent);
    }

    .divider-wings::after {
      content: '✦';
      background: #0c1929;
      padding: 0 1rem;
      color: rgba(59,130,246,0.5);
      font-size: 16px;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .f18-jet { display: none; }
      .altitude-bar, .speed-indicator { display: none; }
      .sticky-header { display: none; }
      .mobile-jet-silhouette { display: block !important; }
    }

    /* Sticky Header */
    .sticky-header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 100;
      background: rgba(12, 25, 41, 0.95);
      backdrop-filter: blur(20px);
      border-bottom: 1px solid rgba(59, 130, 246, 0.2);
      padding: 0.75rem 1.5rem;
    }

    .sticky-header-inner {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .sticky-logo {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .sticky-logo-icon {
      width: 36px;
      height: 36px;
      background: linear-gradient(135deg, #3b82f6, #2563eb);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 18px;
      color: white;
    }

    .sticky-logo-text {
      font-family: 'Orbitron', sans-serif;
      font-size: 14px;
      font-weight: 700;
      color: white;
      letter-spacing: 0.05em;
    }

    .sticky-cta {
      padding: 0.5rem 1.25rem;
      background: linear-gradient(135deg, #3b82f6, #2563eb);
      border-radius: 6px;
      font-family: 'Rajdhani', sans-serif;
      font-weight: 600;
      font-size: 13px;
      color: white;
      text-decoration: none;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      transition: all 0.3s ease;
    }

    .sticky-cta:hover {
      box-shadow: 0 0 30px rgba(59, 130, 246, 0.5);
      transform: translateY(-2px);
    }

    /* Spades Wing Logo */
    .spades-wing-logo {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.5rem;
      justify-content: center;
    }

    .wing-left, .wing-right {
      width: 60px;
      height: 2px;
      background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.6));
    }

    .wing-right {
      background: linear-gradient(-90deg, transparent, rgba(59, 130, 246, 0.6));
    }

    .spades-wing-icon {
      width: 50px;
      height: 50px;
      background: linear-gradient(135deg, #3b82f6, #1d4ed8);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 24px;
      color: white;
      box-shadow: 0 0 30px rgba(59, 130, 246, 0.4);
      border: 2px solid rgba(255, 255, 255, 0.2);
    }

    /* Attendee Preview */
    .attendee-preview {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1rem;
      margin: 1.5rem 0;
      padding: 1rem 1.5rem;
      background: rgba(59, 130, 246, 0.1);
      border: 1px solid rgba(59, 130, 246, 0.2);
      border-radius: 12px;
    }

    .attendee-orgs {
      display: flex;
      gap: 0.5rem;
    }

    .attendee-org {
      padding: 0.25rem 0.75rem;
      background: rgba(59, 130, 246, 0.2);
      border-radius: 4px;
      font-family: 'Rajdhani', sans-serif;
      font-size: 11px;
      font-weight: 600;
      color: #60a5fa;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .attendee-text {
      font-family: 'Rajdhani', sans-serif;
      font-size: 14px;
      color: rgba(255, 255, 255, 0.7);
    }

    .attendee-text strong {
      color: #60a5fa;
    }

    /* Real Metrics */
    .real-metrics {
      display: flex;
      justify-content: center;
      gap: 2rem;
      margin: 1.5rem 0;
    }

    .metric-item {
      text-align: center;
    }

    .metric-value {
      font-family: 'Orbitron', sans-serif;
      font-size: 1.5rem;
      font-weight: 700;
      color: #60a5fa;
    }

    .metric-label {
      font-family: 'Rajdhani', sans-serif;
      font-size: 11px;
      color: rgba(255, 255, 255, 0.5);
      text-transform: uppercase;
      letter-spacing: 0.1em;
    }

    /* Squadron Context */
    .squadron-context {
      font-family: 'Rajdhani', sans-serif;
      font-size: 10px;
      color: rgba(96, 165, 250, 0.5);
      margin-top: 0.25rem;
    }

    /* Afterburner button glow */
    .btn-aviation-primary:hover::after {
      content: '';
      position: absolute;
      inset: -4px;
      background: linear-gradient(90deg, #ff6b35, #ffcc00, #ff6b35);
      border-radius: 10px;
      z-index: -1;
      opacity: 0.3;
      filter: blur(8px);
      animation: afterburnerGlow 0.5s ease-in-out infinite alternate;
    }

    @keyframes afterburnerGlow {
      0% { opacity: 0.2; }
      100% { opacity: 0.4; }
    }

    /* Mobile jet silhouette */
    .mobile-jet-silhouette {
      display: none;
      position: absolute;
      top: 20%;
      right: 10%;
      width: 150px;
      opacity: 0.15;
    }
  </style>

  <!-- Sticky Header -->
  <header class="sticky-header">
    <div class="sticky-header-inner">
      <div class="sticky-logo">
        <span class="sticky-logo-icon">♠</span>
        <span class="sticky-logo-text">Spades Institute</span>
      </div>
      <a href="#signup" class="sticky-cta">Request Access</a>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="sky-gradient min-h-[65vh] flex items-center justify-center relative pt-16">
    <div class="cloud-layer"></div>

    <!-- Mobile Static Jet -->
    <svg class="mobile-jet-silhouette" viewBox="0 0 200 60" fill="none">
      <path d="M180 30L160 20V25H100L80 15H70L85 25H40L20 20L10 25L30 30L10 35L20 40L40 35H85L70 45H80L100 35H160V40L180 30Z" fill="rgba(96,165,250,0.3)" stroke="rgba(255,255,255,0.2)" stroke-width="0.5"/>
    </svg>

    <!-- F-18 Formation -->
    <div class="jet-formation">
      <!-- Lead Jet -->
      <svg class="f18-jet jet-leader" viewBox="0 0 200 60" fill="none">
        <path d="M180 30L160 20V25H100L80 15H70L85 25H40L20 20L10 25L30 30L10 35L20 40L40 35H85L70 45H80L100 35H160V40L180 30Z" fill="url(#jetGradient)" stroke="rgba(255,255,255,0.3)" stroke-width="0.5"/>
        <ellipse cx="100" cy="30" rx="15" ry="8" fill="rgba(100,180,255,0.3)"/>
        <defs>
          <linearGradient id="jetGradient" x1="10" y1="30" x2="180" y2="30">
            <stop offset="0%" stop-color="#4a5568"/>
            <stop offset="50%" stop-color="#718096"/>
            <stop offset="100%" stop-color="#4a5568"/>
          </linearGradient>
        </defs>
        <!-- Afterburner -->
        <ellipse cx="5" cy="30" rx="12" ry="6" fill="url(#afterburnerGrad)" opacity="0.9"/>
        <defs>
          <radialGradient id="afterburnerGrad">
            <stop offset="0%" stop-color="#ffcc00"/>
            <stop offset="50%" stop-color="#ff6b35"/>
            <stop offset="100%" stop-color="transparent"/>
          </radialGradient>
        </defs>
      </svg>
      
      <!-- Wingman 1 -->
      <svg class="f18-jet jet-wingman-1" viewBox="0 0 200 60" fill="none">
        <path d="M180 30L160 20V25H100L80 15H70L85 25H40L20 20L10 25L30 30L10 35L20 40L40 35H85L70 45H80L100 35H160V40L180 30Z" fill="#5a6a7a" stroke="rgba(255,255,255,0.2)" stroke-width="0.5"/>
        <ellipse cx="5" cy="30" rx="10" ry="5" fill="url(#afterburnerGrad)" opacity="0.8"/>
      </svg>
      
      <!-- Wingman 2 -->
      <svg class="f18-jet jet-wingman-2" viewBox="0 0 200 60" fill="none">
        <path d="M180 30L160 20V25H100L80 15H70L85 25H40L20 20L10 25L30 30L10 35L20 40L40 35H85L70 45H80L100 35H160V40L180 30Z" fill="#5a6a7a" stroke="rgba(255,255,255,0.2)" stroke-width="0.5"/>
        <ellipse cx="5" cy="30" rx="10" ry="5" fill="url(#afterburnerGrad)" opacity="0.8"/>
      </svg>
    </div>

    <!-- Altitude indicator - Real Metrics -->
    <div class="altitude-bar hidden md:flex">
      <span>75+</span>
      <span>GOVT</span>
      <span>INDUSTRY</span>
      <span>LEADERS</span>
    </div>

    <!-- Speed indicator - Real Stats -->
    <div class="speed-indicator hidden md:block">APR 28-29 2025</div>

    <!-- Hero Content -->
    <div class="max-w-4xl mx-auto px-6 py-20 text-center relative z-10">
      <!-- Spades Wing Logo -->
      <div class="spades-wing-logo reveal-up">
        <div class="wing-left"></div>
