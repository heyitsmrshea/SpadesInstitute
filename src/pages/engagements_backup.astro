---
import Layout from '../components/Layout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import engagements from '../data/engagements.json';
import ClockIcon from '../components/icons/ClockIcon.astro';
import MapPinIcon from '../components/icons/MapPinIcon.astro';
import VideoCameraIcon from '../components/icons/VideoCameraIcon.astro';
import ChevronDownIcon from '../components/icons/ChevronDownIcon.astro';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://HeyItsMrShea.github.io';

// FAQ data for structured data
const faqs = [
  {
    q: "Who can participate in Spades Institute programs?",
    a: "Our programs are designed for professionals in government, industry, and academia who are committed to strengthening national security through ethical collaboration. We welcome senior leaders, operators, innovators, veterans, and researchers."
  },
  {
    q: "What's the time commitment for a fellowship?",
    a: "Fellowship programs typically run 6-12 months and involve immersion experiences in partner organizations. The exact commitment varies based on the specific program and participant availability."
  },
  {
    q: "How are speaker series topics selected?",
    a: "Topics are curated based on timely national security challenges and participant input. We focus on actionable insights that participants can apply to their work immediately."
  },
  {
    q: "Is there a cost to participate?",
    a: "Program costs vary. Many of our programs are funded through partnerships and grants. Contact us to discuss specific opportunities and any associated costs."
  }
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.q,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.a
    }
  }))
};
---
<Layout 
  title="Engage | Spades Institute" 
  description="Explore our speaker series and fellowships that bring together mission leaders, technologists, and practitioners to solve national security challenges."
>
  <head slot="head">
    <link rel="canonical" href={`${siteUrl}${base}/engagements`} />
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  </head>
  
  <Breadcrumbs items={[
    { label: 'Home', href: `${base}/` },
    { label: 'Engage', href: `${base}/engagements` }
  ]} />

  <!-- Hero -->
  <section class="bg-spades-ink-deep section-padding-sm relative overflow-hidden">
    <div class="absolute inset-0 bg-hex-pattern opacity-30" aria-hidden="true"></div>
    
    <div class="max-w-4xl mx-auto px-6 text-center relative blur-reveal">
      <p class="text-xs uppercase tracking-widest text-spades-muted-light mb-4">Engage</p>
      <h1 class="text-heading-xl md:text-heading-2xl text-white">Public/Private Engagements</h1>
      <p class="mt-4 text-lg text-dark-secondary max-w-2xl mx-auto leading-relaxed">
        Speaker series, fellowships, and mentoring that pair mission leaders with practitioners. Designed to produce next-step actions and introductions.
      </p>
    </div>
  </section>

  <!-- Find Your Path Selector -->
  <section class="bg-spades-ink-deep border-b border-white/10 py-6">
    <div class="max-w-4xl mx-auto px-6">
      <div class="flex flex-wrap justify-center gap-3">
        <a href="#speaker-series" class="px-5 py-2.5 rounded-full bg-white/10 text-white text-sm font-medium hover:bg-white/20 transition-colors border border-white/10 hover:border-white/20">
          I'm from government
        </a>
        <a href="#fellowship" class="px-5 py-2.5 rounded-full bg-white/10 text-white text-sm font-medium hover:bg-white/20 transition-colors border border-white/10 hover:border-white/20">
          I'm from industry
        </a>
        <a href="#veteran-mentoring" class="px-5 py-2.5 rounded-full bg-white/10 text-white text-sm font-medium hover:bg-white/20 transition-colors border border-white/10 hover:border-white/20">
          I'm a veteran
        </a>
        <a href={`${base}/partner`} class="px-5 py-2.5 rounded-full bg-spades-accent text-white text-sm font-medium hover:bg-spades-accent/90 transition-colors">
          I want to partner
        </a>
      </div>
    </div>
  </section>

  <!-- Programs -->
  <section class="bg-spades-paper section-padding">
    <div class="max-w-5xl mx-auto px-6">
      <div class="space-y-8">
        
        <!-- Speaker Series -->
        <article id="speaker-series" class="scroll-mt-24 depth-card p-0 overflow-hidden reveal-up">
          <div class="flex">
            <!-- Left accent bar -->
            <div class="w-1.5 bg-gradient-to-b from-spades-accent to-spades-accent/60 flex-shrink-0"></div>
            
            <div class="flex-1 p-6 md:p-8">
              <!-- Header row -->
              <div class="flex flex-wrap items-start justify-between gap-4 mb-4">
                <div>
                  <p class="text-xs uppercase tracking-widest text-spades-accent font-bold mb-2">Public/Private Engagements</p>
                  <h3 class="text-xl md:text-2xl font-bold text-spades-text">Quarterly Speaker Series</h3>
                </div>
                <!-- Program snapshot - one clean line -->
                <div class="text-sm text-spades-muted">
                  Quarterly • In-person or virtual • Washington, D.C. & beyond
                </div>
              </div>
              
              <!-- Description -->
              <p class="text-spades-text-secondary mb-5">
                Candid discussions with senior leaders in government, defense, tech, and industry. Designed to produce next-step actions and introductions.
              </p>
              
              <!-- Two columns: Who it's for + Outcomes -->
              <div class="grid md:grid-cols-2 gap-6 mb-6">
                <div>
                  <p class="text-xs uppercase tracking-widest text-spades-muted font-semibold mb-3">Who it's for</p>
                  <div class="flex flex-wrap gap-2">
                    <span class="inline-flex items-center px-3 py-1 rounded-full bg-spades-accent/10 text-spades-accent text-xs font-medium">Senior leaders</span>
                    <span class="inline-flex items-center px-3 py-1 rounded-full bg-spades-accent/10 text-spades-accent text-xs font-medium">Operators</span>
                    <span class="inline-flex items-center px-3 py-1 rounded-full bg-spades-accent/10 text-spades-accent text-xs font-medium">Innovators</span>
                  </div>
                </div>
                <div>
                  <p class="text-xs uppercase tracking-widest text-spades-muted font-semibold mb-3">What you get</p>
                  <ul class="space-y-1.5">
                    <li class="flex items-start gap-2 text-sm text-spades-text-secondary">
                      <span class="text-spades-accent mt-0.5">✓</span>
                      <span>Curated speakers and closed-door exchange</span>
                    </li>
                    <li class="flex items-start gap-2 text-sm text-spades-text-secondary">
                      <span class="text-spades-accent mt-0.5">✓</span>
                      <span>Practical takeaways you can apply</span>
                    </li>
                  </ul>
                </div>
              </div>
              
              <!-- Proof element -->
              <div class="text-sm text-spades-muted italic mb-5 pb-5 border-b border-spades-border">
                Output: Curated introductions + actionable insights memos
              </div>
              
              <!-- CTA row -->
              <div class="flex flex-wrap items-center gap-4">
                <a href={`${base}/connect`} class="btn btn-primary btn-shimmer">
                  Request a convening
                </a>
                <span class="text-sm text-spades-muted">We'll respond within 3 business days</span>
              </div>
            </div>
          </div>
        </article>
        
        <!-- Fellowship -->
        <article id="fellowship" class="scroll-mt-24 depth-card p-0 overflow-hidden reveal-up">
          <div class="flex">
            <div class="w-1.5 bg-gradient-to-b from-blue-600 to-blue-600/60 flex-shrink-0"></div>
            
            <div class="flex-1 p-6 md:p-8">
              <div class="flex flex-wrap items-start justify-between gap-4 mb-4">
                <div>
                  <p class="text-xs uppercase tracking-widest text-blue-600 font-bold mb-2">Bi-directional Fellowship</p>
                  <h3 class="text-xl md:text-2xl font-bold text-spades-text">National Security Fellowship</h3>
                </div>
                <div class="text-sm text-spades-muted">
                  6–12 months • Hybrid • Flexible location
                </div>
              </div>
              
              <p class="text-spades-text-secondary mb-5">
                Two-way placement between government and industry professionals. Each placement ends with a written deliverable and a briefing to stakeholders.
              </p>
              
              <div class="grid md:grid-cols-2 gap-6 mb-6">
                <div>
                  <p class="text-xs uppercase tracking-widest text-spades-muted font-semibold mb-3">Who it's for</p>
                  <div class="flex flex-wrap gap-2">
                    <span class="inline-flex items-center px-3 py-1 rounded-full bg-blue-600/10 text-blue-600 text-xs font-medium">Government professionals</span>
                    <span class="inline-flex items-center px-3 py-1 rounded-full bg-blue-600/10 text-blue-600 text-xs font-medium">Industry leaders</span>
                  </div>
                </div>
                <div>
                  <p class="text-xs uppercase tracking-widest text-spades-muted font-semibold mb-3">What you get</p>
                  <ul class="space-y-1.5">
                    <li class="flex items-start gap-2 text-sm text-spades-text-secondary">
                      <span class="text-blue-600 mt-0.5">✓</span>
                      <span>Immersion in each other's environments</span>
                    </li>
                    <li class="flex items-start gap-2 text-sm text-spades-text-secondary">
                      <span class="text-blue-600 mt-0.5">✓</span>
                      <span>Trust-building through mission work</span>
                    </li>
                  </ul>
                </div>
              </div>
              
              <div class="text-sm text-spades-muted italic mb-5 pb-5 border-b border-spades-border">
                Output: Written deliverable + stakeholder briefing
              </div>
              
              <div class="flex flex-wrap items-center gap-4">
                <a href={`${base}/connect`} class="btn btn-primary btn-shimmer">
                  Apply for the fellowship
                </a>
                <span class="text-sm text-spades-muted">Applications reviewed monthly</span>
              </div>
            </div>
          </div>
        </article>
        
        <!-- Veteran Mentoring -->
        <article id="veteran-mentoring" class="scroll-mt-24 depth-card p-0 overflow-hidden reveal-up">
          <div class="flex">
            <div class="w-1.5 bg-gradient-to-b from-emerald-600 to-emerald-600/60 flex-shrink-0"></div>
            
            <div class="flex-1 p-6 md:p-8">
              <div class="flex flex-wrap items-start justify-between gap-4 mb-4">
                <div>
                  <p class="text-xs uppercase tracking-widest text-emerald-600 font-bold mb-2">Career Transition Support</p>
                  <h3 class="text-xl md:text-2xl font-bold text-spades-text">Veteran Mentoring</h3>
                </div>
                <div class="text-sm text-spades-muted">
                  Ongoing • Virtual + In-person • Nationwide
                </div>
              </div>
              
              <p class="text-spades-text-secondary mb-5">
                Translate your military experience into meaningful civilian impact. Start with resume support, then connect with executive mentors who guide your transition.
              </p>
              
              <div class="grid md:grid-cols-2 gap-6 mb-6">
                <div>
                  <p class="text-xs uppercase tracking-widest text-spades-muted font-semibold mb-3">Who it's for</p>
                  <div class="flex flex-wrap gap-2">
                    <span class="inline-flex items-center px-3 py-1 rounded-full bg-emerald-600/10 text-emerald-600 text-xs font-medium">Veterans</span>
                    <span class="inline-flex items-center px-3 py-1 rounded-full bg-emerald-600/10 text-emerald-600 text-xs font-medium">Executive teams</span>
                  </div>
                </div>
                <div>
                  <p class="text-xs uppercase tracking-widest text-spades-muted font-semibold mb-3">What you get</p>
                  <ul class="space-y-1.5">
                    <li class="flex items-start gap-2 text-sm text-spades-text-secondary">
                      <span class="text-emerald-600 mt-0.5">✓</span>
                      <span>Professional resume via Operation MOS</span>
                    </li>
                    <li class="flex items-start gap-2 text-sm text-spades-text-secondary">
                      <span class="text-emerald-600 mt-0.5">✓</span>
                      <span>1:1 mentorship from industry executives</span>
                    </li>
                  </ul>
                </div>
              </div>
              
              <div class="text-sm text-spades-muted italic mb-5 pb-5 border-b border-spades-border">
                Output: Polished resume + executive introductions
              </div>
              
              <div class="flex flex-wrap items-center gap-4">
                <a href="https://app.operationmos.com" target="_blank" rel="noreferrer" class="btn btn-primary btn-shimmer">
                  Start with your resume
                  <span aria-hidden="true">→</span>
                </a>
                <a href={`${base}/connect`} class="text-sm text-spades-accent font-medium hover:underline">
                  Or request mentoring directly
                </a>
              </div>
            </div>
          </div>
        </article>
        
      </div>
      
      <!-- Partner / Sponsor CTA -->
      <div class="mt-12 p-6 md:p-8 rounded-xl bg-spades-ink-deep text-white text-center reveal-up">
        <h3 class="text-xl font-bold mb-3">Want to partner with Spades Institute?</h3>
        <p class="text-dark-secondary mb-6 max-w-lg mx-auto">
          If you don't fit neatly into a program but want to collaborate, sponsor, or support our mission, let's talk.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href={`${base}/connect`} class="btn btn-invert btn-shimmer">Partner with us</a>
          <a href="https://givebutter.com/spadesinstitute" target="_blank" rel="noreferrer" class="btn btn-invert-outline">Donate</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Veterans Initiative Highlight with Eligibility -->
  <section class="bg-white section-padding border-y border-spades-border">
    <div class="max-w-4xl mx-auto px-6">
      <div class="card p-8 md:p-10 bg-spades-ink-deep text-white border-0">
        <div class="text-center mb-8">
          <p class="text-xs uppercase tracking-widest text-spades-muted-light mb-3">Featured Initiative</p>
          <h2 class="text-heading-lg md:text-heading-xl text-white mb-3">Veteran Mentoring</h2>
          <p class="text-dark-secondary max-w-xl mx-auto">
            Translate your military experience into meaningful civilian impact. Start by building your resume on Operation MOS, then connect with mentors who can guide your transition.
          </p>
        </div>
        
        <!-- Eligibility Checklist -->
        <div class="bg-white/5 border border-white/10 rounded-xl p-6 mb-8 max-w-md mx-auto">
          <p class="text-sm font-medium text-white mb-4 text-center">Eligibility Requirements</p>
          <ul class="space-y-3">
            <li class="flex items-start gap-3 text-sm text-dark-secondary">
              <span class="text-white/80 mt-0.5">✓</span>
              <span>Honorably discharged U.S. military veteran</span>
            </li>
            <li class="flex items-start gap-3 text-sm text-dark-secondary">
              <span class="text-white/80 mt-0.5">✓</span>
              <span>Minimum 4 years of active duty service</span>
            </li>
            <li class="flex items-start gap-3 text-sm text-dark-secondary">
              <span class="text-white/80 mt-0.5">✓</span>
              <span>Interest in national security or public service</span>
            </li>
            <li class="flex items-start gap-3 text-sm text-dark-secondary">
              <span class="text-white/80 mt-0.5">✓</span>
              <span>Commitment to ethics-first collaboration</span>
            </li>
          </ul>
        </div>
        
        <div class="text-center space-y-4">
          <a
            href="https://app.operationmos.com"
            target="_blank"
            rel="noreferrer"
            class="btn btn-invert"
          >
            Build your resume on Operation MOS
            <span aria-hidden="true">→</span>
          </a>
          <p class="text-sm text-dark-muted">
            Free, AI-powered resume builder designed specifically for veterans.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- How to Engage -->
  <section class="bg-spades-paper section-padding">
    <div class="max-w-5xl mx-auto px-6">
      <div class="text-center mb-10">
        <h2 class="text-heading-lg text-spades-text">How to Engage</h2>
        <p class="mt-3 text-spades-text-secondary max-w-xl mx-auto">
          A straightforward path from initial contact to active collaboration.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        <div class="card p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-xl bg-spades-accent text-white flex items-center justify-center text-lg font-semibold">1</div>
          <h3 class="font-semibold text-spades-text mb-2">Connect</h3>
          <p class="text-sm text-spades-text-secondary">Reach out to discuss your goals and explore how we might work together.</p>
        </div>
        <div class="card p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-xl bg-spades-accent text-white flex items-center justify-center text-lg font-semibold">2</div>
          <h3 class="font-semibold text-spades-text mb-2">Discover</h3>
          <p class="text-sm text-spades-text-secondary">We'll identify the right program and format for your needs and objectives.</p>
        </div>
        <div class="card p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-xl bg-spades-accent text-white flex items-center justify-center text-lg font-semibold">3</div>
          <h3 class="font-semibold text-spades-text mb-2">Collaborate</h3>
          <p class="text-sm text-spades-text-secondary">Engage in structured programs designed for trust, clarity, and measurable outcomes.</p>
        </div>
      </div>

      <div class="mt-10 text-center">
        <a href={`${base}/connect`} class="btn btn-primary">
          Propose an engagement
        </a>
      </div>
    </div>
  </section>

  <!-- FAQs -->
  <section class="bg-white section-padding border-t border-spades-border">
    <div class="max-w-3xl mx-auto px-6">
      <div class="text-center mb-10">
        <h2 class="text-heading-lg text-spades-text">Frequently Asked Questions</h2>
      </div>

      <div class="space-y-4">
        {faqs.map((faq) => (
          <details class="group card p-0 overflow-hidden">
            <summary class="cursor-pointer p-6 flex items-center justify-between gap-4 focus-accent">
              <span class="font-semibold text-spades-text">{faq.q}</span>
              <ChevronDownIcon class="w-5 h-5 text-spades-muted flex-shrink-0 transition-transform duration-200 group-open:rotate-180" />
            </summary>
            <div class="px-6 pb-6 pt-0">
              <p class="text-body text-spades-text-secondary">{faq.a}</p>
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>
</Layout>
