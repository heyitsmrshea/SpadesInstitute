---
import Layout from '../components/Layout.astro';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://www.spadesinstitute.org';

const events = [
  { id: 'dinner', name: 'Dinner', date: 'Mon, Apr 28, 6:30 PM' },
  { id: 'breakfast', name: 'Breakfast', date: 'Tue, Apr 29, 7:30 AM' }
];
---

<Layout title="RSA 2025 | Spades Institute" description="Join Spades Institute at RSA Conference 2025">
  <head slot="head">
    <link rel="canonical" href={`${siteUrl}${base}/rsa9`} />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>

  <style>
    /* ===== RSA9: BOLD HERO WITH INLINE FORM ===== */
    * { font-family: 'Space Grotesk', sans-serif; box-sizing: border-box; margin: 0; padding: 0; }
    
    .page {
      min-height: 100vh;
      background: #000;
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 2rem;
      text-align: center;
    }
    
    .badge {
      display: inline-block;
      background: #22c55e;
      color: black;
      padding: 0.375rem 1rem;
      border-radius: 4px;
      font-size: 11px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      margin-bottom: 1.5rem;
    }
    
    .title {
      font-size: clamp(2.5rem, 8vw, 5rem);
      font-weight: 700;
      line-height: 1.1;
      margin-bottom: 1rem;
      letter-spacing: -0.02em;
    }
    
    .subtitle {
      font-size: 1.1rem;
      color: #a1a1aa;
      max-width: 500px;
      margin: 0 auto 2rem;
      line-height: 1.5;
    }
    
    .form-container {
      background: #18181b;
      border-radius: 16px;
      padding: 1.5rem;
      width: 100%;
      max-width: 500px;
    }
    
    .form-row {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 0.75rem;
    }
    
    @media (max-width: 500px) { .form-row { flex-direction: column; } }
    
    .input-field {
      flex: 1;
      padding: 0.875rem 1rem;
      background: #27272a;
      border: 1px solid #3f3f46;
      border-radius: 8px;
      font-size: 14px;
      color: white;
    }
    .input-field::placeholder { color: #71717a; }
    .input-field:focus { outline: none; border-color: #22c55e; }
    
    .event-toggles {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 0.75rem;
    }
    
    .event-toggle {
      flex: 1;
      padding: 0.75rem;
      background: #27272a;
      border: 2px solid #3f3f46;
      border-radius: 8px;
      color: #a1a1aa;
      font-size: 13px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.15s;
      text-align: center;
    }
    .event-toggle:hover { border-color: #52525b; }
    .event-toggle.active { border-color: #22c55e; background: rgba(34,197,94,0.1); color: #22c55e; }
    
    .submit-btn {
      width: 100%;
      padding: 1rem;
      background: #22c55e;
      color: black;
      border: none;
      border-radius: 8px;
      font-size: 15px;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.2s;
    }
    .submit-btn:hover { background: #16a34a; transform: translateY(-1px); }
    
    .msg { padding: 0.75rem; border-radius: 8px; font-size: 14px; margin-bottom: 0.75rem; text-align: center; }
    .success { background: rgba(34,197,94,0.2); color: #22c55e; }
    .error { background: rgba(239,68,68,0.2); color: #ef4444; }
    .hidden { display: none; }
    
    .footer {
      margin-top: 2rem;
      font-size: 13px;
      color: #52525b;
    }
    .footer a { color: #71717a; text-decoration: none; }
    .footer a:hover { color: #22c55e; }
  </style>

  <div class="page">
    <span class="badge">RSA 2025 · San Francisco</span>
    
    <h1 class="title">Join the<br/>Mission Brief</h1>
    
    <p class="subtitle">Exclusive gatherings for leaders in national security, tech, and innovation. Request your invitation below.</p>
    
    <div class="form-container">
      <div id="success-msg" class="msg success hidden">✓ You're on the list!</div>
      <div id="error-msg" class="msg error hidden">Something went wrong</div>
      
      <form id="rsaForm">
        <div class="form-row">
          <input type="text" name="name" placeholder="Name" required class="input-field" />
          <input type="text" name="company" placeholder="Organization" required class="input-field" />
        </div>
        <input type="email" name="email" placeholder="Email address" required class="input-field" style="width: 100%; margin-bottom: 0.75rem;" />
        
        <div class="event-toggles">
          {events.map(e => (
            <button type="button" class="event-toggle" data-event={e.id}>
              {e.name}<br/><small style="opacity: 0.7">{e.date}</small>
            </button>
          ))}
        </div>
        
        <button type="submit" class="submit-btn">Get Invited →</button>
      </form>
    </div>
    
    <div class="footer">
      <a href="mailto:info@spadesinstitute.org">Contact</a> · <a href={`${base}/`}>Home</a>
    </div>
  </div>

  <script>
    const toggles = document.querySelectorAll('.event-toggle');
    const selected = new Set();
    
    toggles.forEach(btn => {
      btn.addEventListener('click', () => {
        const id = btn.getAttribute('data-event') || '';
        if (selected.has(id)) { selected.delete(id); btn.classList.remove('active'); }
        else { selected.add(id); btn.classList.add('active'); }
      });
    });
    
    const form = document.getElementById('rsaForm');
    const successEl = document.getElementById('success-msg');
    const errorEl = document.getElementById('error-msg');
    
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      successEl?.classList.add('hidden');
      errorEl?.classList.add('hidden');
      
      if (selected.size === 0) {
        if (errorEl) { errorEl.textContent = 'Select at least one event'; errorEl.classList.remove('hidden'); }
        return;
      }
      
      const data = new FormData(form);
      
      try {
        const res = await fetch('https://api.web3forms.com/submit', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            access_key: '217a97ca-0557-4364-86f7-66e28fbd499f',
            subject: `RSA 2025 - ${data.get('name')}`,
            email: data.get('email'),
            message: `Name: ${data.get('name')}\nOrg: ${data.get('company')}\nEmail: ${data.get('email')}\nEvents: ${Array.from(selected).join(', ')}`
          })
        });
        if ((await res.json()).success) {
          successEl?.classList.remove('hidden');
          form.reset();
          toggles.forEach(t => t.classList.remove('active'));
          selected.clear();
        } else { errorEl?.classList.remove('hidden'); }
      } catch { errorEl?.classList.remove('hidden'); }
    });
  </script>
</Layout>
